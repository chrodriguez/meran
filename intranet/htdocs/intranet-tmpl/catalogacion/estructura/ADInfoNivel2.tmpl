[% FOREACH nivel2 IN nivel2_array %]    
    <p class="nivel2Selected" onClick="mostrarInfoAltaNivel3( '[% nivel2.getId1 %]',  '[% nivel2.getId2 %]'); toggleClass(this);">
    <b>[% 'Grupo:' | i18n %] [% nivel2.getId2 %] - [% nivel2.cat_ref_tipo_nivel3.getNombre %]</b>
    <br/>
    <div>
        [% PERL %]
                print C4::AR::Filtros::to_Icon(   
                                                    boton   => "icon_edicion",
                                                    onClick => "modificarN2('[% nivel2.getId2 %]');",
                                                    title   => "[% 'Modificar nivel 2' | i18n %]",
                        ) ;
        [% END %]
    </div>
    <div>
        [% PERL %]
                print C4::AR::Filtros::to_Icon(   
                                                    boton   => "icon_agregar",
                                                    onClick => "agregarN3();",
                                                    title   => "[% 'Agregar nivel 3' | i18n %]",
                        ) ;
        [% END %]
    </div>
    <div>
        [% PERL %]
                print C4::AR::Filtros::to_Icon( 
                                                    boton   => "icon_borrar",
                                                    onClick => "borrarN2('[% nivel2.getId2 %]');",
                                                    title   => "[% 'Borrar nivel 2' | i18n %]",
                        ) ;
        [% END %]
    </div>


    [% 'Nivel bibliogr&aacute;fico:' | i18n %] [% nivel2.ref_nivel_bibliografico.getDescription %]
    <br/>
    [% 'Soporte:' | i18n %] [% nivel2.ref_soporte.getDescription %]
    <br/>
    [% 'Lugar:' | i18n %] [% nivel2.pais_publicacion.getNombre_largo %]
    <br/>
    [% 'Idioma:' | i18n %] [% nivel2.ref_idioma.getDescription %]
    <br/>
    [% 'Fecha:' | i18n %] [% nivel2.getAnio_publicacion %]
    <br/>
    [% 'Cantidad Ejemplares:' | i18n %] [% cant_ejemplares %]
    </p>
[% END %]