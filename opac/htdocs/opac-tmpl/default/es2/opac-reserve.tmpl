
<!-- Mensajes de Informacion al Usuario-->
<div class="tablemsg">
	<font class="fontmsg"><b>
	[% message %]
	[% IF reservaGrupo %]
		<center> 
			<a href="opac-userupdate.pl?borrnumber=[% borrowernumber %]">
				<input title="Modificar" type="button" value="[% 'Modificar' | i18n %]">
			</a> 
		</center>
	[% END %]
	</b></font>

<!-- EL USUARIO LLEGO AL MAXIMO DE RESERVAS -->
[% IF maximoReservas %]
<br><br><br><hr>

<table  width="98%" border="1" class="tope" cellspacing="0" cellpadding="4" align="center">
	<tr bordercolor="#f2f2f2">
		<td colspan="6" align="center" class="bordetabla" borde=1>
			<b>[% "Reservas actuales" | i18n %]</b>

 		</td>
	</tr> 	
	<tr class="bordetabla"  bordercolor="#f2f2f2">
 		<th>[% "T&iacute;tulo" | i18n %]</th>
		<th>[% "Autor" | i18n %]</th>
		<th>[% "Volumen" | i18n %]</th>
		<th>[% "Disponible desde" | i18n %]</th>
		<th>[% "Fecha de Vencimiento" | i18n %]</th>
		<th>[% "Acci&oacute;n" | i18n %]</th>
	</tr>
[% FOREACH RESERVES %]
	<tr border="1" bordercolor="#f2f2f2">
 		<td class="impar">
			<a class="click" onClick="detalle([% rid1 %])" title="[% 'Mostrar Detalle' | i18n %]">
				[% rtitulo %]
			</a>
 		</td>			
 		<td class="impar">
		[% IF rautor %]
			[% nomCompleto %]
		[% ELSE %]
			&nbsp;
		[% END %]
 		</td>
 		<td align=center class="impar">
		[% IF redicion %]
			[% redicion %]
		[% ELSE %] 
			- 
		[% END %]
		</td>
 		<td class="impar" align="center">
			[% rreservedate %]
		</td>
		<td class="impar" align="center">
			[% rreminderdate %]
		</td>

		<td class="impar">
		[% IF CirculationEnabled %]
			<a class="click" onClick="cancelarYReservar([% reservenumber %],[% id1 %],[% id2 %])">[% "Cancelar" | i18n %]</a> 
		[% ELSE %]
			[% "No disponible" | i18n %]
		[% END %]
 </td>			
</tr>
 [% END %]
</table>

[% END %]

</div>


[% IF materialEnEspera %]

<table  width="100%" border="1" class="tope" cellspacing="0" cellpadding="4" align="center">
  <tr bordercolor="#f2f2f2">    
	<td colspan="4" align="center" class="bordetabla" borde=1>
		<b>[% "Material en espera" | i18n %]</b>
	</td>
  </tr> 	
  <tr class="bordetabla"  bordercolor="#f2f2f2">
	<th>[% "T&iacute;tulo" | i18n %]</th>
	<th>[% "Autor" | i18n %]</th>
	<th>[% "Edici&oacute;n" | i18n %]</th>
	<th>[% "Acci&oacute;n" | i18n %]</th>
  </tr>
<!-- ESTE LOOP MUESTRA LAS RESERVAS -->
[% FOREACH RESERVES %]
  <tr border="1" bordercolor="#f2f2f2">
	<td class="impar">
	<a class="click" onClick="detalleMaterialEnEspera([% rid1 %])" title="[% 'Mostrar Detalle' | i18n %]">
		[% rtitulo %]
		[% IF runititle %]
			:&nbsp;[% runititle %]
		[% END %]
  	</a>
 	</td>
 	<td class="impar">
	[% IF rautor %]
		<a  href="/cgi-bin/koha/opac-searchresults.pl?authorid=[% rautor %]" >
		[% autor %]
		</a>
	[% ELSE %]
		&nbsp;
	[% END %]
 	</td>
	<td align=center class="impar"> 
	[% IF redicion %]
		[% redicion %]
	[% ELSE %] 
		- 
	[% END %]
	</td>
	<td class="impar" align="center">
	[% IF CirculationEnabled %]
		<a class="click"
		onClick="cancelar([% reservenumber %])">[% "Cancelar" | i18n %]</a>
	[% ELSE %]
		[% "No disponible" | i18n %]
	[% END %]
	</td>
  </tr>
 [% END %]
</table>
<br>

[% END %]

[% IF materialParaRetirar %]

<table  width="100%" border="1" class="tope" cellspacing="0" cellpadding="4" align="center" valign="top">
  <tr valign="top">
	<td colspan="7" align="center" class="bordetabla" borde=1>
		<b>[% "Material para retirar" | i18n %]</b>
 	</td>
  </tr>

  <tr class="bordetabla">
	<th>[% "T&iacute;tulo" | i18n %]</th>
	<th>[% "Autor" | i18n %]</th>
	<th>[% "Edici&oacute;n" | i18n %]</th>
	<th>[% "Disponible desde" | i18n %]</th>
	<th>[% "Disponible hasta" | i18n %]</th> 
	<th>[% "Retira en" | i18n %]</th>
	<th>[% "Acci&oacute;n" | i18n %]</th>
  </tr>
<!-- ESTE LOOP MUESTRA LAS RESERVAS EN ESPERA -->
[% FOREACH WAITING %]
  <tr bordercolor="#f2f2f2">
	<td class="impar">
		<b><a class="click" onClick="detalle([% rid1 %])" title="[% 'Mostrar Detalle' | i18n %]">
		[% rtitulo %]
		[% IF runititle %]:&nbsp;[% runititle %][% END %]
		</a></b>
	</td>
	<td class="impar">
  	[% IF rautor %]
		<a href="/cgi-bin/koha/opac-searchresults.pl?authorid=[% rautor %]" >
		[% autor %]
		</a>
  	[% ELSE %]
		&nbsp;
 	[% END %]
	</td> 
	<td align=center class="impar">  
	[% IF redicion %]
		[% redicion %]
	[% END %]
	[% IF rpublicationyear %]&nbsp;([% rpublicationyear %])[% END %]
	[% IF volume %]        t [% volume %] [% END %]
	</td>
	<td class="impar" align="center">
	[% IF rnotificationdate %]
		[% rnotificationdate %]
	[% ELSE %] 
		- 
	[% END %]
	</td>
	<td class="impar" align="center">
	[% IF rreminderdate %]
		<font color="[% color %]">[% rreminderdate %]</font>
	[% ELSE %] 
		- 
	[% END %]
	</td>


	<td class="impar">
		<b>[% rbranch %]</b>
	</td>
	<td class="impar" align="center"> 
	[% IF CirculationEnabled %]
		<a class="click"
		onClick="cancelar([% reservenumber %])">[% "Cancelar" | i18n %]</a>
	[% ELSE %]
		[% "No disponible" | i18n %]
	[% END %]
	</td>

  </tr>
[% END %]
</table>
<br>

[% END %]


