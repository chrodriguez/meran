[% INCLUDE 'intranet-top.inc' %]
[% USE HTML %]

<script src="/includes/jquery/fancybox/jquery.easing.1.3.js"></script>
<script src="/includes/jquery/fancybox/jquery.fancybox-1.2.1.pack.js"></script>
<link rel="stylesheet" type="text/css" href="[% temas %]/[% tema %]/includes/css/fancybox/jquery.fancybox.css">
<script type="text/javascript">
      $(document).ready(function() {
        $('.fancy_link').fancybox({
            'frameWidth':   600,
            'frameHeight':  500,
        });
      });
</script>


<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click">[% "Novedades de OPAC" | i18n %]:</legend>
        <div class="contenedor_paginador">[% paginador %]</div>
        <div class="datos_tabla_div_user">
            <div class="resultados_consulta">[% "La cantidad de novedades es" | i18n %]: [% cant_novedades %]</div>
            <table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width=100%>
                <thead>
                <tr class="titulo_tabla_resultado">
                    <th>[% "Fecha" | i18n %]</th>
                    <th>[% "Usuario" | i18n %]</th>
                    <th>[% "Resumen" | i18n %]</th>
                    <th>[% "Categor&iacute;a" | i18n %]</th>
                    <th>[% "Eliminar" | i18n %]</th>
                </tr>
                </thead>
                <tbody>
                    [% FOREACH novedad IN novedades %]
                        <tr class="leido[% novedad.getLeido %]">
                            <td>
                                <a class="fancy_link" href="/cgi-bin/koha/admin/ver_novedad.pl?token=[% token %]&id=[% novedad.id %]">
                                    [% novedad.getFechaLegible %]
                                </a>
                            </td>
                            <td>
                                <a class="fancy_link" href="/cgi-bin/koha/admin/ver_novedad.pl?token=[% token %]&id=[% novedad.id %]">
                                    [% novedad.getUsuario%] 
                                </a>
                            </td>
                            <td>
                                <a class="fancy_link" href="/cgi-bin/koha/admin/ver_novedad.pl?token=[% token %]&id=[% novedad.id %]">
                                    [% novedad.getResumen %] 
                                </a>
                            </td>
                            <td>
                                <a class="" 
                                    href="/cgi-bin/koha/admin/novedades_opac.pl?token=[% token %]&id=[% novedad.id %]&tipoAccion=marcar">
                                    [% novedad.getCategoria %]
                                </a>
                            </td>
                            <td>
                                <a class="" 
                                    href="/cgi-bin/koha/admin/novedades_opac.pl?token=[% token %]&id=[% novedad.id %]&tipoAccion=eliminar">
                                    [% 'Eliminar' | i18n %]
                                </a>
                            </td>
                        </tr>
                    [% END %]
                </tbody>
            </table>
        </div>
</fieldset>

[% INCLUDE 'intranet-bottom.inc' %]
