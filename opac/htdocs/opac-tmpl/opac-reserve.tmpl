
<!-- Mensajes de Informacion al Usuario-->
<div class="tablemsg">
	<font class="fontmsg">
	
	<b>
	<br>
	[% message %]
	<br>
	[% IF reservaGrupo %]
		<center> 
			<a href="opac-userupdate.pl">
				<input title="[% 'Modificar'| i18n %]" type="button" value="[% 'Modificar' | i18n %]">
			</a> 
		</center>
	[% END %]
	</b></font>

<!-- EL USUARIO LLEGO AL MAXIMO DE RESERVAS -->
[% IF maximoReservas %]
<br><br><br><hr>

<!-- para mostrar los resultados de las busquedas -->
<div id="result"></div>
<div id="resultHistoriales"></div>
<div id="datosUsuario">

<table  width="98%" border="1" class="tope" cellspacing="0" cellpadding="4" align="center">
	<tr bordercolor="#f2f2f2">
		<td colspan="6" align="center" class="bordetabla" borde=1>
			<b>[% "Reservas actuales" | i18n %]</b>

 		</td>
	</tr> 	
	<tr class="bordetabla"  bordercolor="#f2f2f2">
 		<th>[% "T&iacute;tulo" | i18n %]</th>
		<th>[% "Autor" | i18n %]</th>
		<th>[% "Volumen" | i18n %]</th>
		<th>[% "Disponible desde" | i18n %]</th>
		<th>[% "Fecha de Vencimiento" | i18n %]</th>
		<th>[% "Acci&oacute;n" | i18n %]</th>
	</tr>
[% FOREACH reserva IN RESERVAS %]
	<tr border="1" bordercolor="#f2f2f2">
 		<td class="impar">
			<a class="click" onClick="detalle([% reserva.nivel2.nivel1.getId1 %])" title="[% 'Mostrar Detalle' | i18n %]">
				[% reserva.nivel2.nivel1.getTitulo %]
			</a>
 		</td>			
 		<td class="impar">
		[% IF reserva.nivel2.nivel1.getAutor %]
			[% reserva.nivel2.nivel1.cat_autor.getCompleto %]
		[% ELSE %]
			&nbsp;
		[% END %]
 		</td>
 		<td align=center class="impar">
		[% IF reserva.nivel2.getEdicion %] [% reserva.nivel2.getEdicion %] - [% END %]
		</td>
 		<td class="impar" align="center">
			[% reserva.getFecha_reserva_formateada %]
		</td>
		<td class="impar" align="center">
			[% reserva.getFecha_recordatorio_formateada %]
		</td>

		<td class="impar">
		[% IF CirculationEnabled %]
			<a class="click" onClick="cancelarYReservar([% reserva.getId_reserva %],[% reserva.nivel2.nivel1.getId1 %],[% reserva.nivel2.getId2 %])">[% "Cancelar" | i18n %]</a> 
		[% ELSE %]
			[% "No disponible" | i18n %]
		[% END %]
 </td>			
</tr>
 [% END %]
</table>

[% END %]

</div>


