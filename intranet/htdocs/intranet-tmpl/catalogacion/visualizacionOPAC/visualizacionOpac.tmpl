[% INCLUDE "intranet-top.inc" %]

<!-- para manejar la ventana de campos MARC -->
<script src="/intranet-tmpl/includes/popups/helpCamposMARC.js"></script>

<script>
//Init Form
$(document).ready(function() {
	// Help
    toggle_ayuda_in_line();

});

</script>

[% PERL %]
    print C4::AR::Filtros::ayuda_marc() ;
[% END %]

[% PERL %]
    print C4::AR::Filtros::ayuda_in_line("[% 'ayudaaaaa' | i18n %]") ;
[% END %]

<input type="hidden" id="idEncabezado">

<div class="titulos" >[% 'Visualizaci&oacute;n de campos MARC en OPAC' | i18n %]</div>

<fieldset>
    <legend><strong>[% "Seleccione un perfil:" | i18n %]</strong></legend>
    [% combo_perfiles %]
</fieldset>

<fieldset>
    <legend><strong>[% "Agregar Visualizaci&oacute;n:" | i18n %]</strong></legend>
    <div id="divTablaEncabezados"></div>
</fieldset>

<div id="divAgregarModificarVisualizacion"></div>

<fieldset>
    <legend><strong>[% "Configuraci&oacute;n de la Visualizaci&oacute;n:" | i18n %]</strong></legend>
    <div id="divTablaVisualizacion">
        <table class="tabla_datos" cellspacing=0 border="0" cellpadding=0 style="width:95%;">
            <thead>
                <tr class="titulo_tabla_resultado">
                    <td>[% "Campo" | i18n %]</td>
                    <td>[% "Subcampo" | i18n %]</td>
                    <td>[% "Vista en OPAC " | i18n %]</td>
                </tr>
            </thead>
            <tbody>
                [% FOREACH campo IN visualizacion %]
                    <tr align="center">
                        <td>[% campo.getCampo %]</td>
                        <td>[% campo.getSubCampo %]</td>
                        <td>[% campo.getVistaOpac %]</td>
                    </tr>
                [% END %]
            </tbody>
        </table>
    </div>
</fieldset>

[% INCLUDE "intranet-bottom.inc" %]
