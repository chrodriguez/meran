function buscarChecked(){
	var str="";
	var checks=$(":checked");
	for (var i=0 ; i < checks.length; i++){
		str=str+checks[i].value+"#";
	}
	return str;
}

var objAH;

function ordenar(orden){
	objAH.sort(orden);
}

function changePage(ini){
	objAH.changePage(ini);
}

function updateInfo(responseText){
