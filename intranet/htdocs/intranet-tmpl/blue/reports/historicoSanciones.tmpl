<script type="text/javascript">

var objAH;
function ordenar(orden){
	objAH.sort(orden);
}

function updateInfo(responseText){
	$("#result").html(responseText);
	zebra("tablaResult");
}

function changePage(ini){
	objAH.changePage(ini);
}

function consultar(){
	objAH=new AjaxHelper(updateInfo);
	objAH.fechaIni= $('#fechaIni').val();
	objAH.fechaFin= $('#fechaFin').val();
	objAH.user= $('#user').val();
	objAH.tipoPrestamos=$('#tipoPrestamos').val();
	objAH.tipoOperacion=$('#tipoOperacion').val();
	objAH.url= "/cgi-bin/koha/reports/historicoSancionesResult.pl";
	objAH.funcion="changePage";
	objAH.sendToServer();
}

</script>

