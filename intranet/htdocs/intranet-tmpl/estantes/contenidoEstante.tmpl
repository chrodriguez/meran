
<fieldset class="resultados_busqueda">
    <legend class="titulo_legend">
        [% "Resultados de la b&uacute;squeda" | i18n %]:</legend>
        <div class="datos_tabla_div" id="datos_tabla_div">
            <div class="resultados_consulta">[% "Total de registros" | i18n %]: [% cantidad %] </div>
            <div>[% paginador %]</div>
            <table id="tablaResultHeader" class="datos_tabla modal_result" border=0 cellspacing=0 cellpadding=0 width=100%>
                <tr class="titulo_tabla_resultado">
                    <td width="35%" class="click" onClick="ordenar('titulo')" Title='[% "Ordenar por T&iacute;tulo" | i18n %]'>
                        [% "T&iacute;tulo" | i18n %]
                    </td>
                    <td width="25%" class="click" onClick="ordenar('nomCompleto')" Title='[% "Ordenar por Autor" | i18n %]'>
                        [% "Autor" | i18n %]
                    </td>
                    <td width="35%">[% "Edici&oacute;n/A&ntilde;o" | i18n %]</td>
                </tr>
            </table>
            <div id="div_resultado" style="overflow:auto; width: 100%; height: 350px">
            <table id="tablaResult" class="datos_tabla modal_result" border=0 cellspacing=0 cellpadding=0 width=100%>
            <!-- Actual Resultados de la b&uacute;squeda -->
            [% FOREACH SEARCH_RESULTS %]
                <tr>
                    <td>
                        [% PERL %]
                            print C4::AR::Filtros::link_to( text =>     "[% titulo %]",
                                                            url=>"[% url_prefix %]/catalogacion/estructura/detalle.pl", 
                                                            params =>   ["id1=[% id1 %]"],
                                                            title =>    "[% 'Mostrar Detalle del Ejemplar' | i18n %]"
                                                        ) ;
                        [% END %]
                    </td>

                    <td>
                            [% nomCompleto %]
                    </td>
            
                    <td>
			<ul class='listado_a_izquierda'>
                        [% FOREACH grupos %]
			    <li  style="clear:both;">
			    <div style="float:left;">
                            [% IF edicion %]
                                [% edicion %]
                            [% END %]
                            [% IF anio_publicacion %]
                                ([% anio_publicacion %])
                            [% END %]
                            </div>
                            [% PERL %]
                                    print C4::AR::Filtros::action_button(
                                                                        button  => "icon_plus icon-white",
                                                                        action => "agregarContenidoAEstante([% id2 %]);",
                                                                        title   => "[% 'Agregar a Estante Actual' | i18n %]",
                                                                        alternClass => ""
                                            ) ;
			    [% END %]
                            </li>
                        [% END %]
                        </ul>
                    </td>
                </tr>
            [% END %]
            </table>
          </div>
        </div>
</fieldset>
