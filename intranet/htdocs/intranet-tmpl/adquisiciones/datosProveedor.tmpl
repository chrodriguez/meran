[% INCLUDE "intranet-top.inc" %] 

  <script type="text/javascript" src="/intranet-tmpl/includes/adquisiciones/listProveedoresResult.js"></script>

[% INCLUDE "WindowHelper.inc" %] 
[% INCLUDE "ChangePasswordHelper.inc"  %]

  <script type="text/javascript" src="/intranet-tmpl/includes/adquisiciones/datosProveedor.js"> </script>
<div>
      <!--    DETALLE PROVEEDOR -->

      <fieldset>
          <legend onClick="esconder()" class="titulo_legend_resaltado trigger click titulo_legend" title='[% "Datos del proveedor" | i18n %]'>
                              [% "Datos del proveedor" | i18n %]
          </legend>  
          <div id="detalleProveedor">
             <input type="hidden" id="id_proveedor" value="[% proveedor.getId %]">
	      <li class="sub_item">
		  <label for="nombre"> [% "Nombre" | i18n %] *</label>
		  <input id="nombre" name="nombre" class="required" type="text" size="25" value="[% proveedor.getNombre %]">
	      </li>

	      <li class="sub_item"> 
		  <label for="direccion"> [% "Direccion" | i18n %] </label>
		  <input  id="direccion" name="direccion" type="text" size="25" value="[% proveedor.getDireccion %]">
	      </li>

	      <li class="sub_item">
		  <label for="telefono">[% "Telefono" | i18n %] *</label>
		  <input 	id="telefono" name="telefono" class="required" type="text" size="15" value="[% proveedor.getTelefono %]">
	      </li>

	      <li class="sub_item">
		  <label for="email">[% "Email" | i18n %]</label>
		  <input type=text name="email" id="email" size="25" value="[% proveedor.getEmail %]">
	      </li>
          </div>
          <div id="accion">
              [% PERL %]
                         print C4::AR::Filtros::to_Button(   text    => "[% 'Guardar Cambios' | i18n %]",
                                                               boton   => "boton_buscar",
                                                               onClick => "modificarDatosDeProveedor();",
                                                     ) ;
              [% END %]
          </div>
      </fieldset>
</fieldset>
      
    

  </div>
[% INCLUDE "intranet-bottom.inc" %]
