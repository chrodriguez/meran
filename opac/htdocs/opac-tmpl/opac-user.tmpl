[% INCLUDE 'opac-top.inc' %]

<script language=javascript>

	$(document).ready(function() {
		DetalleReservas();
		DetallePrestamos();
	
	});


</script>

<div id="navegador">
<input onClick="ant('result', zebra);" id="ant" type="image" value="<<" src="[% themelang %]/images/1leftarrow.png" border="0" title="Anterior" style="display:none">
<input onClick="sig('result', zebra);" id="sig" type="image" value=">>" src="[% themelang %]/images/1rightarrow.png" border="0" title="Siguiente" style="display:none">
</div>


<!-- Mensajes de Informacion al Usuario -->
<!-- FIXME no deberia ir mas esto, MessageHelper se encarga de crear el div -->
