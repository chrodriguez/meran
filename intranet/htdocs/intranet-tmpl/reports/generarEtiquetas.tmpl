[% USE HTML %]

[% INCLUDE "intranet-top.inc" %]

<script>

    var objAH;

    function ordenar(orden){
        objAH.sort=orden;
        objAH.sendToServer();
    }

    function consultar(accion){

        jAlert("Sin Implementar");
        return;

        objAH=new AjaxHelper(updateInfo);
        objAH.url=URL_PREFIX+"/reports/generarEtiquetas-result.pl";
        objAH.showOverlay       = true;
        objAH.inv_desde= $.trim($("#inv_desde").val());
        objAH.id_ui= $.trim($("#id_ui").val());
        objAH.inv_hasta= $.trim($("#inv_hasta").val());
        objAH.sig_top_desde= $.trim($("#sig_top_desde").val());
        objAH.sig_top_hasta= $.trim($("#sig_top_hasta").val());
        objAH.sig_top_begin= $.trim($("#sig_top_begin").val());
        objAH.accion = accion;
        objAH.funcion = "changePage";
        if (accion == "pdf"){
            params = "accion=pdf&inv_hasta="+objAH.inv_hasta+"&sig_top_desde="+objAH.sig_top_desde+"&sig_top_hasta="+objAH.sig_top_hasta+"&sig_top_begin="+objAH.sig_top_begin+"&id_ui="+escape(objAH.id_ui);
            crearForm(objAH.url,params);//Funcion en util.js
        }else{
            //se envia la consulta
            objAH.sendToServer();
        }
    }

    function updateInfo(responseText){
        $("#result").html(responseText);
        zebra("tablaResult");
    }
    $(document).ready(function() {
        //onEnter con foco en input, ejecuta la busqueda
        onEnter("inv_desde",consultar);
        onEnter("inv_hasta",consultar);
        onEnter("sig_top_desde",consultar);
        onEnter("sig_top_hasta",consultar);
        onEnter("sig_top_begin",consultar);
    });

</script>

