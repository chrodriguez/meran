

<p align="center">[% "T&eacute;rmino de b&uacute;squeda:" | i18n %]<b> [% buscoPor %]</b></br>
		[% "Cantidad de Registros:" | i18n %] <b>[% cantidad %]</b>
</p>

<center>
[% paginador %]
</center>

<table id="tablaResult" class="tablaResult" border=1 align="center" cellspacing=0 cellpadding=0 width=100%>
	<thead>
	<tr class="bordetabla" >
	[% IF loggedinusername %]
		<th>
			<a id="todos" class="click">
			<img 	src="[% themelang %]/images/check.png" 
				title="Invertir la selecci&oacute;n" border=0>
			</a>
		</th>
	[% END %]
		<th align="center" width="30%">
			<a class="click" onClick="ordenarPor('titulo')">[% "T&iacute;tulo" | i18n %]</a>
		</th>
		<th align="center" width="30%">
			<a class="click" onClick="ordenarPor('nomCompleto')">[% "Autor" | i18n %] </a>
		</th>
		<th align="center" width="20%">[% "Edici&oacute;n/A&ntilde;o" | i18n %]</th>
		<th align="center" width="20%">[% "Disponibilidad" | i18n %] </th>

	</tr>
	</thead>
	<tbody>
<!-- Resultados de la busqueda -->
[% FOREACH SEARCH_RESULTS %]
	<tr>

	[% IF loggedinusername %]
		<td valign="middle" align="center">
			<input type=checkbox name=checkbox value="[% id1 %]" 
			id="[% id1 %]">
		</td>
	[% END %]
		<td class="titulo_result" title="Mostrar Detalle">	
		  [% IF titulo %]

			<a href="/cgi-bin/koha/opac-detail.pl?id1=[% id1 %]" title="Mostrar Detalle" class="click" >
				[% titulo %]
			</a>

		  [% ELSE %]&nbsp;[% END %]
		</td>

		<td class="autor_result" onClick="buscarPorAutor([% idAutor %])">
		  [% IF nomCompleto %]

			[% nomCompleto %]

		  [% ELSE %]&nbsp;[% END %]
		</td>

		<td class="inputFontNormal">
		  [% IF grupos %]
			[% FOREACH grupos %]
				[% IF edicion %][% edicion %] &nbsp;[% END %][% IF anio_publicacion %]([% anio_publicacion %])[% END %]
				[% IF volume %]        t [% volume %][% END %]<br>
			[% END %]
		  [% ELSE %]&nbsp;[% END %]
		</td>

		<td class="inputFontNormal">
		  [% IF disponibilidad %]
			[% FOREACH disponibilidad %]
				<b>[% tipoPrestamo %]</b> [% cantTotal %]
				<br>
				<div style="margin-right:4px">
				[% reservados %]
				<br> 
				[% prestados %]
				<br>
				</div>
         		[% END %]
		  [% ELSE %]&nbsp;[% END %]
		</td>	
	</tr>
[% END %]
	</tbody>
</table>
<br>

