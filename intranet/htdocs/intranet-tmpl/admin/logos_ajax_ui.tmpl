[% USE HTML %]

<script type="text/javascript">
    function agregarPortada_showUI(){
        $('#agregarLogoUI').modal();
    } 
      
    function submitFormUI(){
        $('#agregarLogoUI').modal('hide');
        startOverlay();
        $('#agregarLogoUIForm').submit();
    }
    
    function modificarLogo(id){
	    objAH                   = new AjaxHelper(updateModificarLogo);
	    objAH.showOverlay       = true;
	    objAH.url               = URL_PREFIX+'/admin/logosDB.pl';
	    objAH.idLogo            = id;
	    objAH.tipoAccion        = 'SHOW_MOD_LOGO_UI';
	    objAH.sendToServer();
	}
	
	function updateModificarLogo(responseText){
	    if (!verificarRespuesta(responseText))
            return(0);
        $('#agregarLogoUI').html(responseText);
        $('#agregarLogoUI').modal();
	}
    
    $(document).ready(function() {
        $('.fancy_link').fancybox();
    });
</script>

<fieldset>
    <legend>[% "Listado de Logos de la UI" | i18n %]:</legend>
        [% IF logos %]
            <div class="datos_tabla_div_user">
                
                    [% PERL %]
                        print C4::AR::Filtros::tableHeader(   
                                          id              => "logosTable",
                                          class           => "",
                                          selectAll_id    => "",
                                          columns         => ['[% "Logo"|i18n %]','[% "Nombre"|i18n %]','[% "Acciones"|i18n %]',
                                                             ]
             
                                                ) ;
                    [% END %]

                    <tbody>
                        [% FOREACH logo IN logos %]
                            <tr>
                                <td class="userImage">
                                    <a class="fancy_link" href="http://[% SERVER_ADDRESS %][% opac_htdocs %]/[% user_theme %]/imagenes/[% logo.getImagenPath %]">
                                          <img border="0" src="http://[% SERVER_ADDRESS %][% opac_htdocs %]/[% user_theme %]/imagenes/[% logo.getImagenPath %]" alt="[% logo.getNombre %]" >
				                    </a>
                                </td>
                                <td>
                                    [% logo.nombre %]
                                </td>
                                <td style="width:150px">
                                
                                    [% PERL %]
                                        print C4::AR::Filtros::action_set_button(    
                                              title   => " [% 'Eliminar' | i18n %]",
                                              button  => 'btn btn-danger',
                                              action  => "eliminarLogoUI([% logo.id %])", 
                                              icon    => "icon-white icon-remove",

                     
                                                ) ;
                                    [% END %]
                            
                                </td>
                            </tr>
                        [% END %]
                    </tbody>
                </table>
            </div>
        [% ELSE %]
            <div class="alert alert-info">[% 'No hay logos que listar' | i18n %]</div>
        [% END %]
</fieldset>

<div class="form-actions">	                
	[% PERL %]
        print C4::AR::Filtros::action_button(   
            button   => "btn btn-primary",
            action   => 'agregarPortada_showUI();',
            title   => "[% 'Agregar Logo' | i18n %]",
        ) ;
	[% END %]
</div>

<div id="agregarLogoUI" class="modal hide fade" >
    [% INCLUDE 'formAgregarLogoUI.inc' %]
</div>

<div class="alert alert-block">
  <h4 class="alert-heading">Atención</h4>
  <p>
  Cargue fotos exactamente del mismo tamaño, de lo contrario, los logos va a sufrir cambios de tamaño, provocando molestia visual.
  <br>
  El tamaño óptimo para un logo correcto es de 147x32 px (manteniendo el aspecto).
  </p>
</div>
