[% INCLUDE "intranet-top.inc" %]
<script>
function hacerSubmit(){
	document.branches.submit();
	}
</script>

<div class="titulos" >[% "Ejemplares perdidos" | i18n %]</div>

<center><table border=0 cellspacing=0 cellpadding=2>
<td>[% "Seleccione una unidad de informaci&oacute;n :" | i18n %]</td>
<td><form name="branches" action=/cgi-bin/koha/reports/perdidos.pl method=post >
	[% unidades %]
    </form>
</td>
</table>
<br>
<p>
    [% "La cantidad de ejemplares perdidos es :" | i18n %] [% cantidad %]</p>
<br>

[%  IF ok2 %]
    <a href=perdidos.pl?ini=[% ant %]&branch=[% branch %] <img src=[% themelang %]/images/numbers/ant.gif border=0></a>
[% END %]

[% FOREACH numeros %]
        <a href=perdidos.pl?ini=[% number %]&branch=[% branch %]> 
                <u>[% number %]</u> 
        </a>
[% END %]

[% IF ok %]
    <a href=perdidos.pl?ini=[% sig %]&branch=[% branch %] >
        <img src=[% themelang %]/images/numbers/next.gif border=0>
    </a>
[% END %]
<br><br>
<center>
<table border=2 cellspacing=0 cellpadding=2>
    <th class="tablaresultadoTitle"><a href=perdidos.pl?orden=title&branch=[% branch  %]>[% "Titulo" | i18n %]</a></th>
    <th class="tablaresultadoTitle"><a href=perdidos.pl?orden=author&branch=[% branch %]>[% "Autor" | i18n %]</a></th>
    <th class="tablaresultadoTitle"><a href=perdidos.pl?orden=bulk&branch=[% branch %]>[% "Sigantura Topografica" | i18n %]</a></th>
    <th class="tablaresultadoTitle"><a href=perdidos.pl?orden=barcode&branch=[% branch %]>[% "Codigo de barras" | i18n %]</a></th>
    
    [% FOREACH RESULTSLOOP %]
        <tr align='center'>
            <td> [% title %] </td>
            <td> [% author %] </td>
            <td> [% bulk %] </td>
            <td> [% barcode %] </td>
        </tr>
    [% FOREACH %]
</table>
