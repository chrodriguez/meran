[% INCLUDE "intranet-top.inc" %]

<script type="text/javascript">
	$(document).ready(function() {
	    $("#temas_intra").change(function() {
            $("link").attr("href","[% temas %]/"+$("#temas_intra").val()+"/includes/intranet.css");
	        return false;
	    });
	});
</script>	

<form class="form-horizontal" id="user-settings" method="POST" action="[% url_prefix %]/usuarios/reales/settings.pl" onsubmit="javascript:startOverlay();">
        <fieldset>
	          <legend>
	            [% "Perfil de " | i18n %][% socio_data.usr_nro_socio %] ([% socio_data.usr_apellido %], [% socio_data.usr_nombre %])
	          </legend>
	          <div class="control-group">
	              <label for="languages">[% "Idioma" | i18n %]</label>
	              <div class="controls">
	                  [% languages %]
                      <p class="help-block">[% "Idioma en que se ver&aacute; Meran " | i18n %]</p>	                  
	              </div>
	           </div>
	           <div class="control-group">
		           <label for="email">[% "E-mail" | i18n %]</label>
		           <div class="controls">
			            <div class="input-prepend">
			              <span class="add-on"><i class="icon-envelope"></i></span>
			              <input class="span3" type="text" name="email" id="email" value="[% socio_data.usr_email %]">
			            </div>		               
		           </div>
	               <input type="hidden" name="token" value="[% token %]" />
		       </div>
			     <div class="form-actions">
			           [% PERL %]
			                               print C4::AR::Filtros::to_Button(   text    => "[% 'Guardar' | i18n %]",
			                                                                   boton   => "btn btn-primary",
			                                                                   onClick => "function(){$('#user-settings').submit();}",
			                                       ) ;
			           [% END %]
			    </div>
        </fieldset>
</form>
[% INCLUDE "intranet-bottom.inc" %]