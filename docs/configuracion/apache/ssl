NameVirtualHost *:443

<VirtualHost *:443>
SetEnv KOHA_CONF "/etc/koha.conf"
DocumentRoot /usr/local/koha/intranet/htdocs
ServerAdmin koha@info.unlp.edu.ar
ErrorLog /var/log/koha/koha-error.log
TransferLog /var/log/koha/koha-access.log
SSLEngine On
SSLProtocol -all +SSLv3 +TLSv1
SSLCipherSuite HIGH:MEDIUM
SSLCertificateFile /etc/apache2/ssl/apache.pem

#DirectoryIndex inde/cgi-bin/koha/opac-main.pl

Alias /images/ "/usr/local/koha/intranet/htdocs/intranet-tmpl/blue/images/"
Alias /pictures/ "/usr/local/koha/intranet/htdocs/intranet-tmpl/blue/pictures/"
SetEnv PERL5LIB "/usr/local/koha/intranet/modules"

#Enabling Compression
SetOutputFilter DEFLATE

#SIN MODPERL
#ScriptAlias /cgi-bin/koha/ "/usr/local/koha/intranet/cgi-bin/"

#CON MODPERL
Alias /cgi-bin/koha/ /usr/local/koha/intranet/cgi-bin/
<Location /cgi-bin/koha/ >
       SetHandler perl-script
       PerlResponseHandler ModPerl::Registry
       PerlOptions +ParseHeaders
       Options +ExecCGI
</Location>
#	<Perl>
#	use Carp;
#	push(@INC,"/usr/local/koha/intranet/modules");
#	</Perl>


<Directory /usr/local/koha/intranet/ >
Order deny,allow
Allow from all
Deny from all
</Directory>


<Directory /usr/local/koha/intranet/htdocs/intranet-tmpl/blue/images/ >
Order allow,deny
Allow from all
</Directory>

<Directory /usr/local/koha/intranet/htdocs/intranet-tmpl/blue/pictures/ >
Order allow,deny
Allow from all
</Directory>

ErrorDocument 403 http://koha.unlp.edu.ar/

ServerSignature Off

RewriteEngine on
RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK)
RewriteRule .* - [F]


Alias /includes/ "/usr/local/koha/includes/"
<Directory /usr/local/koha/includes/ >
   Options  -Indexes
   Order allow,deny
   Allow from all
</Directory>

Alias /phpmyadmin /var/www/phpmyadmin/
<Directory /usr/share/phpmyadmin/>
    AllowOverride All
    Order deny,allow
    Allow from 163.10.10.
    Deny from all
</Directory>

<Directory /var/www/phpmyadmin/>
    AllowOverride All
    Order deny,allow
    Allow from 163.10.10.
    Deny from all
</Directory>


# Protect some directories

<Directory /var/lib/phpmyadmin/>
    Options -FollowSymLinks
    AllowOverride None
    Order deny,allow
    Deny from all
</Directory>

<Directory /usr/share/phpmyadmin/config/>
    Options -FollowSymLinks
    AllowOverride None
    Order deny,allow
    Deny from all
</Directory>

<Directory /var/www/phpmyadmin/config/>
    Options -FollowSymLinks
    AllowOverride None
    Order deny,allow
    Deny from all
</Directory>

#<FilesMatch "\.(ico|flv|jpe?g|png|gif|js|css|swf)$">
