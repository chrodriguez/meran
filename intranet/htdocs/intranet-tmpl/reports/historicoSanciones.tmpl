});
</script>

<script type="text/javascript">

var objAH;
function ordenar(orden){
	objAH.sort(orden);
}

function updateConsultar(responseText){
	$("#result").html(responseText);
	zebra("datos_tabla");
}

function changePage(ini){
	objAH.changePage(ini);
}

function consultar(){
	objAH=new AjaxHelper(updateConsultar);
    objAH.debug= true;
    objAH.showOverlay       = true;
	objAH.fechaIni= $.trim($('#fechaIni').val());
	objAH.fechaFin= $.trim($('#fechaFin').val());
	objAH.socio= $('#socios').val();
	objAH.tipoPrestamo= $('#tipo_prestamo_id').val();
	objAH.tipoOperacion= $('#tipoOperacion').val();
	objAH.url= "/cgi-bin/koha/reports/historicoSancionesResult.pl";
	objAH.funcion="changePage";
	objAH.sendToServer();
}

</script>

