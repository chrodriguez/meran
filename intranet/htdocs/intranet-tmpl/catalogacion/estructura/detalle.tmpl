[% IF !ajax %]
    [% INCLUDE  "intranet-top.inc" %]
    
    <script src="/includes/jquery/jquery.jqpageflow.js" type="text/javascript"></script>
    
    <script type="text/javascript"> 
        $(document).ready(function(){
            $("#main_content").flexiPagination({
                url: "[% url_prefix %]/catalogacion/estructura/detalle.pl?id1=[% id1 %]&ajax=1&token=[% token %]",
                totalResults: [% cant_total %],
                perPage: [% per_page %],
                container: "#marco_contenido_datos",
                append_loader: "#loading_items",
                pagerVar : "page",
                loaderImgPath: imagesForJS+"/loader_grupos.gif",
                debug : 1
              });
            
             inicializar();
             zebra("tablaResult");
            });
    </script>


	<script src="/intranet-tmpl/includes/circulacion-min.js"></script>
	<script src="/intranet-tmpl/includes/catalogacion-min.js"></script>
	<script src="/intranet-tmpl/includes/detalleEjemplar.js"></script>

	<!-- Se incluyen las librerias necesarias para manejar autocomplete -->
	[% INCLUDE "AutocompleteHelper.inc" %]
	[% INCLUDE  'WindowHelper.inc'  %]
	
	<div id="confirmar_div" class="pane"></div>
	<br>
	
	
	<!-- PARA PODER CREAR EL FORMULARIO -->
	<div id="formulario"></div>
	
	<div id="detalleMARC"></div>
	
	<div id="detalleComun">
	
	<!-- ---------------Registro de libro TABLE------- -->
	
	
	
	<fieldset>
		   <legend>[% "Detalles de Nivel 1 registro" | i18n %] [% id1 %]</legend>
	
		<div id="detalle1" class="detalle1">
	        <div class="botones_detalle_nivel1">
	            [% PERL %]
	                print C4::AR::Filtros::link_to( text =>     C4::AR::Filtros::to_Icon( boton   => "icon_edicion" ),
	                                                url=>"datosDocumento.pl", 
	                                                params =>   ["id1=[% id1 %]","tipoAccion=MODIFICAR_NIVEL_1"],
	                                                title =>    "[% 'Editar Registro' | i18n %]"
	                                            ) ;
	            [% END %]
	        
	            [% PERL %]
	                print C4::AR::Filtros::to_Icon(    
	                                                    boton   => "icon_borrar",
	                                                    onClick => "borrarN1([% id1 %]);",
	                                                    title   => "[% 'Borrar Nivel 1' | i18n %]",
	                        ) ;
	            [% END %]
	        </div>
		    
		    <ul class="listado_sin_margen">
			    [% FOREACH nivel1 %]
	
			            [% IF liblibrarian %]
			                [% IF dato %]
			                <li>    [% liblibrarian %]: <strong>[% dato %]</strong> </li>
			                [% END %]
			            [% END %]
	
			    [% END %]
		    </ul>
	
			[% "N&uacute;mero Total de Ejemplares" | i18n %]:<b> [% cantItemN1 %]</b> 
		</div>
	</fieldset>
[% END %] <!-- End de If ajax  -->
[% FOREACH nivel2 %]

        <div id="fieldset_grupo[% id2 %]">
	        <fieldset>
	            <legend class="trigger trigger_3_[% id2 %] click">[% "Detalles de Nivel 2 para registro" | i18n %] [% id2 %] [% "GRUPO" | i18n %] - [% tipo_documento %]</legend>
	                <div id="grupo[% id2 %]" class="grupo[% id2 %]">
	                
	                <div id="grupo[% id2 %]" class="grupo[% id2 %]">
		                <!-- NIVEL 2 -->
			                <div id="[% id2 %]" style="position: relative; float:right;"></div>
			                [% PERL %]
				                print C4::AR::Filtros::link_to(	text => 	C4::AR::Filtros::to_Icon( boton   => "icon_edicion" ),
												                url => 		"datosDocumento.pl", 
												                params =>	["id1=[% id1 %]","id2=[% id2 %]","tipoAccion=MODIFICAR_NIVEL_2"],
												                title =>	"[% 'Editar Grupo' | i18n %]"
											                ) ;
			                [% END %]

	                        [% IF tiene_indice %]
	                            [% PERL %]
	                                                print C4::AR::Filtros::to_Icon(  
	                                                                                    boton   => "icon_indice",
	                                                                                    onClick => "mostrarIndice([% id2 %]);",
	                                                                                    title   => "[% 'Ver &iacute;ndice' | i18n %]",
	                                                        ) ;
	                            [% END %]
	                        [% END %]
		                

<!--                            <a class="inline" href="#indice_data[% id2 %]">Indice</a>-->
                            <div style="display:none"><div id="indice_data[% id2 %]" style="white-space: pre;" title="[% 'Indice del grupo' | i18n %]">[% indice %]</div></div>

		                <div>
		                    [% PERL %]
		                                        print C4::AR::Filtros::to_Icon(  
		                                                                            boton   => "icon_borrar",
		                                                                            onClick => "borrarN2([% id2 %]);",
		                                                                            title   => "[% 'Borrar Grupo' | i18n %]",
		                                                ) ;
		                    [% END %]
		                </div>
			                <br>
			                [% IF amazon_cover %]
				                <div class='amazon_cover_detail' style="position: relative; float:right;">
						                <img name="cover"  VALUE="" BORDER=0 src="[% themelang %]/[% lang %]/[% amazon_cover %]" title="Tapa" >
				                </div>
				                <br>
			                [% END %]

			                <ul class="listado_sin_margen">
				                [% FOREACH nivel2_array %]
                                    [% IF liblibrarian %]
                                        [% IF dato %]
                                        <li> [% liblibrarian %]: <strong>[% dato %]</strong></li>
                                        [% END %]
                                    [% END %]
                                [% END %] <!-- END FOREACH nivel2_array -->
			                    <li>
					                    [% INCLUDE "estructura/ejemplaresDelGrupo.tmpl" %]
			                    </li>
                                <li>
                                        [% INCLUDE "estructura/analiticasDelGrupo.tmpl" %]
                                </li>
                            </ul>
	                </div>
                [% INCLUDE  "partials/e-docs_grupo.inc" %]
	            </div> <!--Fin <div id="grupo TMPL_VAR NAME='id2'-->
	        </fieldset>
	        <script type="text/javascript">makeToggle('grupo[% id2 %]','trigger_3_[% id2 %]',null,false);</script>
        </div>

[% END %]<!-- END FOREACH Nivel 2-->
</div> <!-- Fin DIV detalleComun -->
[% IF !ajax %]
	<div id='basic-modal-content'></div>
	<!-- para mostrar el contenido del indice -->
	
	
	[% INCLUDE  "intranet-bottom.inc" %]
[% END %]