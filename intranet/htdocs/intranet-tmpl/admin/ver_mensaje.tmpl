<script type="text/javascript" src="/includes/jquery/jquery.wysiwyg.js"></script>
<link rel="stylesheet" href="/includes/css/wysiwyg.css" type="text/css" media="screen"/>

<script type="text/javascript"> 
      
        function responderMail(){
                  startOverlay();
                  $('#fancybox-overlay').css('z-index','1010');
                  objAH                     = new AjaxHelper(updateResponderMail);
                  objAH.url                 = URL_PREFIX+'/admin/rta_mensaje_contacto.pl';
                  objAH.debug               = true;
                  objAH.texto               = $('#respuesta').val();
                  objAH.asunto              = $('#asunto').val();
                  objAH.email               = $('#email').val();
                  objAH.mensaje_contacto    = $('#mensaje_contacto').val();
                  objAH.sendToServer();
              
        }
        
        
        function updateResponderMail(responseText){
            closeModal();
           $('#fancybox-overlay').css('z-index','1001');
            if (!verificarRespuesta(responseText))
                    return(0);
            var Messages=JSONstring.toObject(responseText);
            setMessages(Messages);
            $.fancybox.close();
        }

</script>
 <div class="msj_contacto">
    <h2>[% 'Asunto' | i18n %]: [% mensaje.getAsunto %]</h2>
    <input type="hidden" id="asunto" name="asunto" value="[% mensaje.getAsunto %]">

        <fieldset>
        
            <legend>[% 'Cuerpo del mensaje' | i18n %]:</legend>
            <h3>[% mensaje.getMensaje %]</h3>
            <input type="hidden" name="mensaje_contacto" id="mensaje_contacto" value="[% mensaje.getMensaje %]">

        </fieldset>
        <p>[% 'De' | i18n %]: [% mensaje.getApellido %], [% mensaje.getNombre %] ([% mensaje.getEmail %])</p>
        <input type="hidden" name="email" id="email" value="[% mensaje.getEmail %]">
        <h1 id="responder" class="pagetitle" onclick="responder()"> [% 'Responder mensaje' | i18n %]</h1>
                  <div class="responder" style="display:none; padding-top:10px;">
                            <textarea id="respuesta" name="respuesta" class="self_review" style="width: 377px"></textarea>
                            <p style="width:20px; padding-top:15px;"><input class="fancybox_button" type="submit" onclick="responderMail()"  value="Aceptar"/></p>
                  </div>
</div>

