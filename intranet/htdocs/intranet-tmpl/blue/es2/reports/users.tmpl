	zebra("tablaResult");
}

function consultar(){
	objAH=new AjaxHelper(updateInfo);
	objAH.url="/cgi-bin/koha/reports/usersResult.pl";
	objAH.branch=$("#branch").val();
	objAH.year=$("#year").val();
	objAH.usos=$("#usos").val();
	objAH.categoria=$("#categoria").val();
	objAH.chck=buscarChecked();
	objAH.funcion= "changePage";
	objAH.sendToServer();
}

</script>



