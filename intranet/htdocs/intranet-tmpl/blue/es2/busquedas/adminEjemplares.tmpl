<script language="javascript" type="text/javascript">

var objAH;
function ordenar(orden){
	objAH.sort(orden);
}

function changePage(ini){
	objAH.changePage(ini);
}

function consultar(){
	var isbn=$("#isbn").val();
	var titulo=$("#titulo").val();
	if(isbn != "" || titulo != ""){
		objAH=new AjaxHelper(updateInfo);
		objAH.url= "/cgi-bin/koha/busquedas/busqEjemplar.pl";
		objAH.funcion= 'changePage';
		objAH.isbn= isbn;
		objAH.titulo= titulo;
		objAH.sendToServer();
	}
	else{
		alert("Ingrese un dato para realizar la busqueda");
	}

}

function updateInfo(responseText){
	$("#result").html(responseText);
	zebra("tablaResult");
}


$(document).ready(function(){
	onEnter("isbn",consultar);
	onEnter("titulo",consultar);
});

function swap(id,src){
	document.getElementById(id).src=src;
}


function agregarEjemplar(id1){
	var itemtype=$("#"+id1).val();
	if(itemtype !=  -1){
		location.href="../acqui.simple/agregarItem.pl?id1="+id1+"&itemtype="+itemtype;
	}
	else{
		alert("Eliga el esquema de catalogo para agregar un item");
	}
}

</script>

