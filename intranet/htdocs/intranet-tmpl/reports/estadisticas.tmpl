<script type="text/javascript">

function consultar(){
	objAH=new AjaxHelper(updateInfo);
    objAH.showOverlay       = true;
	objAH.url=URL_PREFIX+"/reports/estadisticasResult.pl";
	objAH.chkfecha= document.getElementById("chkfecha").checked;
	objAH.chkuser= document.getElementById("chkuser").checked;
	objAH.fechaIni= $("#dateselected").val();
	objAH.fechaFin= $("#dateselectedEnd").val();
	
	var chck=$("input[@name='chck']:checked");
	var str="";
	for(var i=0; i< chck.length; i++){
		str=str+chck[i].value+",";
	}
	objAH.chck=str;
	//se envia la consulta
	objAH.sendToServer();
}

function updateInfo(responseText){
	$("#result").html(responseText);
}

</script>

