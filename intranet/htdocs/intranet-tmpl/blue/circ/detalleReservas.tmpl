[% USE HTML %]
<br>

<b>El usuario tiene [% reserves_count %] ejemplar(es) reservado(s) esperando para ser retirado(s).</b>
<br>

<table border="0" cellspacing="0" cellpadding="0" width="100%" align="center">
	<tr>
		<td colspan="9" class="inputFontNormal" align="center">
			<b>EJEMPLARES RESERVADOS</b>
		</td>
	</tr>
</table>
<table class="tablaReservas" border="0" cellspacing="0" cellpadding="0" width="100%" align="center">

	<tr class="tablaresultadoTitle">
		<td width="1%" align="left" valign="top">
			<img src="[% themelang %]/images/izquierda.png">
		</td>
		<td>
			<input type="image" id="checkAllReservas" src="[% themelang %]/images/check.png" title="Seleccionar todos">
		</td>
		<td>T&iacute;tulo</td>
		<td>Autor</td>
		<td>Edici&oacute;n</td>
		<td>Reservado desde</td>
		<td>Reservado hasta</td>
		<td>&nbsp;</td>

		<td width="1%" align="right" valign="top">
			<img src="[% themelang %]/images/derecha.png">
		</td>
	</tr>
<!-- ESTE LOOP MUESTRA LOS EJEMPLARES RESERVADOS DEL USUARIO-->
[% FOREACH RESERVES %]
	<tr align="center" class="inputFontNormal">
		<td width="1%">&nbsp;</td>
		<td>
			<input type="checkbox" name="chkboxReservas" value="[% rid3 %]" id="[% rid3 %]">
		</td>
		<td>
			[% HTML.escape(rtitulo) %]
				[% IF runititle %]
					:&nbsp;[% runititle %]
				[% END %]
		</td>
		<td>
			[% IF rautor %]
				[% nomCompleto %]
			[% ELSE %]
				&nbsp;
			[% END %]
		</td>
		<td>
			[% IF redicion %]
				[% redicion %]
			[% ELSE %]
				&nbsp;
			[% END %]
		</td>
		<td>
			[% IF rnotificationdate %]
				[% rnotificationdate %]
			[% ELSE %]
				&nbsp;
			[% END %]
		</td>
		<td>
			[% rreminderdate %]
		</td>
		<td align="middle"> 
	       		<input type="image" name="cancel"  value="cancelar" 
			src="[% themelang %]/images/borrar.png" 
			onClick="cancelarReserva('[% reservenumber %]')" title="Cancelar">
		</td>
		<td width="1%">&nbsp;</td>
	</tr>
[% END %]
</table>

[% IF reserves_count %]
	<p colspan="10" class="inputFontNormal" align=center>
		<input type="image" name="borrowD"  value="prestar" 
		src="[% themelang %]/images/item-prestar.png" 
		title="Realizar pr&eacute;stamo" 
		onClick="realizarAccion('CONFIRMAR_PRESTAMO','chkboxReservas',generaDivPrestamo);">
	</p>
[% END %]



<br>
<b>El usuario tiene [% waiting_count %] reserva(s) en espera.</b>
<table border="0" cellspacing="0" cellpadding="0" width="100%" align="center" class="">
	<tr>
		<td colspan="6" class="inputFontNormal" align="center"><b>RESERVAS</b></td>
	</tr>
</table>
<table border="0" cellspacing="0" cellpadding="0" width="100%" align="center" class="tablaReservas">
	<tr class="tablaresultadoTitle">
		<td width="1%" align="left" valign="top">
			<img src="[% themelang %]/images/izquierda.png">
		</td>

		<td>T&iacute;tulo</td>
		<td>Autor</td>
		<td>Edici&oacute;n</td>
		<td>&nbsp;</td>
		<td>&nbsp;</td>

		<td width="1%" align="right" valign="top">
			<img src="[% themelang %]/images/derecha.png">
		</td>
	</tr>
	<!-- ESTE LOOP MUESTRA LAS RESERVAS EN ESPERA -->
	[% FOREACH WAITRESERVES %]
		<tr valign="top" class="inputFontNormal">
			<td width="1%">&nbsp;</td>
			<td>
				[% HTML.escape(rtitulo) %]
				[% IF runititle %]
					:&nbsp;
					[% runititle %]
				[% END %]
			</td>
			<td>
				[% IF rautor %]
					[% nomCompleto %]
				[% ELSE %]
					&nbsp;
				[% END %]
			</td>
			<td>
				[% IF redicion %]		
					[% redicion %]
				[% ELSE %]
					&nbsp;
				[% END %]
			</td>
			<td>
				<input type="image" name="cancel"  value="cancelar" 
				src="[% themelang %]/images/borrar.png" 
				onClick="cancelarReserva('[% reservenumber %]')" title="Cancelar">
			</td>
			<td width="1%">&nbsp;</td>
			<td width="1%">&nbsp;</td>
		</tr>
	[% END %]
</table>

<br>

