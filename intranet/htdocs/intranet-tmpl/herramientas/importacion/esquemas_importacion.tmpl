        <legend class="titulo_legend">[% "Selecci&oacute; de esquema de importaci&oacute;n" | i18n %]</legend>
        <div class="permisos_selector">
            <ul>
                [% IF combo_esquemas_importacion %]
	                <li class="sub_item">
	                    <label for="id_ui">[% 'Esquema' | i18n %]: </label>
	                        [% combo_esquemas_importacion %]
	                </li>
                [% END %]
                
                [% PERL %]
                    print C4::AR::Filtros::to_Button(   text    => "[% 'Nuevo esquema' | i18n %]",
                                                        boton   => "boton_agregar",
                                                        onClick => "nuevoEsquemaImportacion_dialog();",
                                                        title   => "[% 'Nuevo esquema' | i18n %]",
                                                        alternClass => "botonCentrado",
                            ) ;
                [% END %]
            </ul>
        </div>
        <br>
        <br>
        <br>
    </fieldset>
    <div class="esquema_result" id="esquema_result"> </div>
</div>



