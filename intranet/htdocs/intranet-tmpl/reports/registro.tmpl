function agregarNota(registro){
    $('#add_note_' + registro).dialog('open');
}

function verNota(registro){
    $('#view_note_' + registro).dialog('open');
}


$(document).ready(function() {
    crearDatePicker('dateselected');
    crearDatePicker('dateselectedEnd');

});

</script>

