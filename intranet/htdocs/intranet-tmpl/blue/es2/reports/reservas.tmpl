<script>
//Agrego el codigo para mostrar el estado de la busqueda en Ajax
<!-- TMPL_INCLUDE NAME="state.js" -->

function ocultarBoton(tipoReserva){
	var botonMail=$("#contacto");
	if(tipoReserva != "EJ"){
		botonMail.hide();
	}
	else{
		botonMail.show();
	}
}

function consultar(orden,ini){
	var branch=$("#branch").val();
	var tipoReserva=$("#tipoReserva").val();
	$.ajax({
		type: "POST",
		url: "/cgi-bin/koha/reports/reservasResult.pl",
		data: "branch="+branch+"&tipoReserva="+tipoReserva+"&orden="+orden+"&ini="+ini,
		beforeSend: Init,
		complete: function(ajax){
				$("#result").html(ajax.responseText);
				ocultarBoton(tipoReserva);
				HiddeState();
			}
	})
}

</script>

