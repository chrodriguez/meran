[% USE HTML %]
[% IF HEADERS %]
    [% INCLUDE "intranet-top.inc" %]
    <!-- PARA PODER CREAR EL FORMULARIO -->
    <div id="formulario"></div>

[% END %]

<script type="text/javascript">
      $(document).ready(function() {
        makeToggle('datos_tabla_div','trigger',null,false);
        $('.fancylink').fancybox();
      });
</script>
<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click" title='[% "click para acceder a los resultados de la b&uacute;squeda" | i18n %]'>
        [% "Resultados de la b&uacute;squeda (cat&aacute;logo)" | i18n %]:</legend>
        <div class="datos_tabla_div" id="datos_tabla_div">
            <div class="resultados_consulta">[% "T&eacute;rmino de b&uacute;squeda" | i18n %]: 
            
                <h2><i>[% buscoPor %]</i></h2>
            
                [% IF !from_suggested %]
			        [% IF suggested %]
			                <div class="suggested_search click">
			                    <a onclick="buscarSuggested('[% suggested %]')">
			                        [% "Usted quiso decir" | i18n %] <span style="font-style: italic">[% suggested %]</span>?
			                    </a>
			                </div>
			        [% END %]
			    [% END %]
            
            
            </div>
            <div class="resultados_consulta">[% "Total de registros" | i18n %]: <b>[% cantidad %]</b>  en ([% timeSeg %] segundos)</div>
            <div class="contenedor_paginador">[% paginador %]</div>


            <table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width=100%>
                <tr class="titulo_tabla_resultado">
                    <td style="width: 11%;">[% "Tipo" | i18n %]</td>
                    <td width="35%" class="click" onclick="ordenarPor('titulo')">
                        [% "T&iacute;tulo" | i18n %]
                    </td>
                    <td width=28%" class="click" onclick="ordenarPor('autor')">
                        [% "Autor" | i18n %]
                    </td>
                    <td width="11%">[% "Edici&oacute;n/A&ntilde;o" | i18n %]</td>
                    <td width="10%"> [% "Disponibilidad" | i18n %] </td>
                    [% IF signatura_filter %]
                        <td>[% "Signatura" | i18n %]</td>
                    [% END %]
                    
                    
                </tr>
            <!-- Actual Resultados de la b&uacute;squeda -->
            [% FOREACH SEARCH_RESULTS %]
                <tr>

                        <td class="titulo_result">
                            [% IF portadas_grupo_cant > 0 %]
                                    [% FOREACH portadas_grupo %]
                                        [% IF loop.count < 4 %]
                                            [% IF portada_registro %]
                                                <a class="fancylink" rel="group" href="/uploads/covers/[% portada_registro_big %]">
                                                    <img name="cover"  VALUE="" BORDER=0 src="/uploads/covers/[% portada_registro %]" title="Portada">
                                                </a>
                                            [% ELSE %]
                                                  <img src="/uploads/covers/[% cat_ref_tipo_nivel3 %].png" 
                                                        alt="[% 'Sin Portada' | i18n %]"
                                                        title="[% 'Sin Portada' | i18n %]" />
                                            [% END %]
                                        [% END %]
                                    [% END %]
                            [% ELSE %]
                                [% IF portada_registro %]
                                    [% IF portada_registro_big %]
                                        <a class="fancylink" rel="group" href="/uploads/covers/[% portada_registro_big %]">
                                            <img alt="cover" src="/uploads/covers/[% NIVEL.portada_registro %]" title="Portada" />
                                        </a>
                                    [% ELSE %]
                                        [% IF portada_registro_medium %]
                                            <a class="fancylink" rel="group" href="/uploads/covers/[% portada_registro_medium %]">
                                                <img alt="cover" src="/uploads/covers/[% portada_registro %]" title="Portada" />
                                            </a>
                                        [% ELSE %]
                                                <img alt="cover" src="/uploads/covers/[% portada_registro %]" title="Portada" />
                                        [% END %]
                                    [% END %]
                                [% ELSE %]
                                         <img src="/uploads/covers/[% cat_ref_tipo_nivel3 %].png" 
                                              alt="[% 'Sin Portada' | i18n %]"
                                              title="[% 'Sin Portada' | i18n %]" />
                                [% END %]
                            [% END %]
                            <br />
                            <center><div style="font-weight: bold; font-size: 10px; clear:both;" >[% cat_ref_tipo_nivel3_name %] </div></center>
                        </td>


                    <td class="titulo_result">
                        [% PERL %]
                            print C4::AR::Filtros::link_to( text =>     "[% HTML.escape(titulo) %]",
                                                            url=>"[% url_prefix %]/catalogacion/estructura/detalle.pl", 
                                                            params =>   ["id1=[% id1 %]"],
                                                            title =>    "[% 'Mostrar Detalle del Ejemplar' | i18n %]",
                                                            class => "link_to_detail"
                                                        ) ;
                        [% END %]
                    </td>
            
                    <td class="autor_result">
                        <a class="click" onClick="buscarPorAutor('[% nomCompleto %]')" title="[% 'Filtrar por Autor' | i18n %]">
                            [% nomCompleto %]
                        </a>
                    </td>
            
                    <td>
                        <span id="grupos_[% id1 %]">
	                        [% FOREACH grupos %]
	                            [% IF edicion %]
	                                [% edicion %] &nbsp;
	                            [% END %]
	                            [% IF loop.prev.anio_publicacion != anio_publicacion %]
	                                <br />
		                            [% IF anio_publicacion %]
		                                ([% anio_publicacion %])
		                            [% END %]
		                        [% END %]
		                            
	                        [% END %]
	                    </span>
                    </td>
            
                    <td>
                        [% FOREACH disponibilidad %]
                            <b>[% tipoPrestamo %]</b> [% cantTotal %]<br>
                               [% nodisponibles %]
                               [% reservados %]
                               [% prestados %]
                        [% END %]
                    </td>   
                    [% IF signatura_filter %]
                        <td style="white-space: pre-line;">
	                        [% FOREACH signatura IN signaturas %]
	                            [% signatura %]
	                        [% END %]
                        </td>
                    [% END %]
                </tr>
             <script type="text/javascript">$("#grupos_[% id1 %]").expander({
            	  slicePoint: 2000, 
            	  widow: 10,
            	  expandEffect: 'fadeIn', 
            	  expandText: "<br />[% 'M&aacute;s ediciones' | i18n %]",
            	  userCollapseText: '[^]'
            	});
             </script>
            [% END %]
            </table>
        </div>
        <div class="contenedor_paginador">[% paginador %]</div>
        
</fieldset>

[% IF HEADERS %]
    [% INCLUDE "intranet-bottom.inc" %]
[% END %]
