[% USE HTML %]

<div class="resultados_consulta">[% "La cantidad de usuarios es :" | i18n %] [% cantidad %]</div> 
<div class="resultados_consulta">[% "Ha buscado por :" | i18n %] [% HTML.escape(socio) %]</div>

<div class="contenedor_paginador">[% paginador %]</div>

<table id="tablaResult" class="tabla_datos" width="100%" cellspacing=0 cellpadding=0>
	<thead>
  	<tr class="tablaresultadoTitle">
    		<th>&nbsp;</th>

    		<th align="left" width="28%" class="click" onClick="ordenar('apellido')">
                    [% "Apellido y Nombres" | i18n %]
                </th>
    		<th align="left" width="15%" class="click" onClick="ordenar('nro_documento')">
                    [% "Documento" | i18n %]
                </th>
    		<th>
                    [% "Cat." | i18n %]
                </th>
    		<th>  
                    [% "Habilitado?" | i18n %]
                </th>

  	</tr>
	</thead>
	<tbody>

[% FOREACH resultsloop %]
      	<tr align="center">
      	
     		<td valign="middle" align="center">
			[% IF nomodificable %]
				[% "Imposible" | i18n %] 
			[% ELSE %]
				<input type=checkbox name="[% socio.getId_socio %]" 
				id="[% socio.persona.getId_persona %]" 
				value="[% socio.persona.getNro_documento %]">
			[% END %]
		</td>
		
      	<td align="left" class="nomCompleto">
            [% PERL %]
                print C4::AR::Filtros::link_to( text =>     "[% socio.persona.getApeYNom %]",
                                                url =>      "/cgi-bin/koha/usuarios/potenciales/datosUsuario.pl", 
                                                params =>   ["nro_socio=[% socio.getNro_socio %]"],
                                                title =>    "[% 'Mostrar Detalle del Usuario' | i18n %]"
                                            ) ;
            [% END %]
		</td>

      	<td align="left" class="documento">
			[% socio.persona.getVersion_documento %]&nbsp; [% socio.persona.getNro_documento %]
		</td>

 		<td>
                [% socio.categoria.getDescription %]
		</td> 
        <td>
			<span class="[% clase %]"> <b>[% activo %]</b> </span>
		</td>

    </tr>
[% END %]
	<tr valign=bottom>
        	<td class="lineafinaltabla"  align="left" colspan="12"></td>
        </tr>
	</tbody>
</table>


<table>
	<tr>
		<td>
		<input name="cantidad" id="cantidad" type="hidden" value="[% modificable %]">
		</td>   
	</tr>
	<tr>
		<td>
			<label for="accion" accesskey="t"></label>
			<selectid="accion" name="accion">
				<option value="HABILITAR_PERSON" selected="selected">
                    [% "Habilitar Seleccionados" | i18n %]
                </option>
				<option value="DESHABILITAR_PERSON">
                    [% "Deshabilitar Seleccionados" | i18n %]
                </option>
			</select>
		</td>
		<td>
			<input type="image" src="[% themelang %]/images/seleccionar.png" onClick="javascript:habilitar()" >
		</td>
	</tr>
</table>
