[% IF SANCIONES %]
    <fieldset class="detalle_sanciones_sancionado"> 
[% ELSE %]
    <fieldset class="detalle_sanciones"> 
[% END %]
<legend class="titulo_legend_resaltado">[% 'Detalle de sanciones' | i18n %]</legend>

[% IF SANCIONES %]

<table class="tablaSanciones datos_tabla warning" border=0  width="100%"  cellpadding='0' cellspacing='0'>    
    <tr valign="top">
    
	    <td>
	        <ul>
		<font class="fontmsg">
	        [% FOREACH sancion IN SANCIONES %]
		        <li>
			<div>
			<div>
		        [% IF sancion.tipo_sancion %]
				<ul> 
				[% FOREACH ts IN sancion.ref_tipo_prestamo_sancion %] 
				<li>[% ts.ref_tipo_prestamo.descripcion %]</li>
				[% END %]
				</ul>
		        [% ELSE %]
		        [% "Reserva no retirada" | i18n %]
		        [% END %] 
        		</div>
			<div>
		        [% "Desde el" | i18n %] [% sancion.getFecha_comienzo_formateada %] 
		        [% "hasta el" | i18n %] [% sancion.getFecha_final_formateada %]
			</div>
			</li>
	        [% END %]
		        </font>
	        </ul>	
	    </td>
    </tr>
</table>
[% ELSE %]

    <div class="resultados_consulta">[% 'El usuario no tiene sanciones actualmente' | i18n %]</div>

[% END %]
</fieldset>
