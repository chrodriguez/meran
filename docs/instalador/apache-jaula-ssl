NameVirtualHost *:443

<VirtualHost *:443>
SetEnv MERAN_CONF "/etc/meran/reemplazarID/meran.conf"
PerlSwitches -wT 

DirectoryIndex /meran/mainpage.pl 
DocumentRoot /usr/share/meran/reemplazarID/intranet/htdocs

#Enabling Compression
SetOutputFilter DEFLATE

ServerAdmin koha@info.unlp.edu.ar
ErrorLog /var/log/meran/reemplazarID/meran-error.log
TransferLog /var/log/meran/reemplazarID/meran-access.log

SSLEngine On
SSLProtocol -all +SSLv3 +TLSv1
SSLCipherSuite HIGH:MEDIUM
SSLCertificateFile /etc/apache2/ssl/reemplazarID/apache.pem

ErrorDocument 500 /meran/informacion/error.pl
ErrorDocument 404 /meran/informacion/error.pl
<Directory /usr/share/meran/reemplazarID/intranet/ >
Order deny,allow
Allow from all
Deny from all
</Directory>

#CON MODPERL

<Perl>
push(@INC,"/usr/share/meran/reemplazarID/intranet/modules");
push(@INC,"/usr/share/meran/reemplazarID/intranet/modules/C4/Share/share/perl/5.10.1/");
push(@INC,"/usr/share/meran/reemplazarID/intranet/modules/C4/Share/lib/perl/5.10.1/");
push(@INC,"/usr/share/meran/reemplazarID/intranet/modules/C4/Share/share/perl/5.10/");
push(@INC,"/usr/share/meran/reemplazarID/intranet/modules/C4/Share/share/perl/5.10.1/");
push(@INC,"/usr/share/meran/reemplazarID/intranet/modules/C4/Share/lib/perl5/");


</Perl>



Alias /meran/ /usr/share/meran/reemplazarID/intranet/cgi-bin/
<Location /meran/ >
       SetHandler perl-script
       PerlResponseHandler ModPerl::Registry
       PerlOptions +ParseHeaders
       Options +ExecCGI
</Location>

Alias /includes/ /usr/share/meran/reemplazarID/includes/
<Directory /usr/share/meran/reemplazarID/includes/ >
 Options  -Indexes
  Order allow,deny
  Allow from all
</Directory>

ServerSignature Off

Alias /uploads/ "/usr/share/meran/reemplazarID/intranet/htdocs/uploads/"
<Directory /usr/share/meran/reemplazarID/intranet/reemplazarID/htdocs/uploads/ >
Order allow,deny
Allow from all
</Directory>


Alias /cron "/usr/share/meran/reemplazarID/intranet/cgi-bin/cron/"
<Directory /usr/share/meran/reemplazarID/intranet/cgi-bin/cron/ >
 Order deny,allow
 Allow from 127.0.0.1/255.255.255.255
 Deny from all
</Directory>

Alias /dev-plugins /usr/share/meran/dev-plugins/
<Directory /usr/share/meran/dev-plugins/>
Options  -Indexes
Order allow,deny
Allow from all
</Directory>

</VirtualHost>
