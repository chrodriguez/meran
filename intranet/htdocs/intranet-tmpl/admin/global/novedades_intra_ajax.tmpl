[% USE HTML %]
<script type="text/javascript">
      $(document).ready(function() {
          $('.fancy_link').fancybox({
              'frameWidth':   600,
              'frameHeight':  500,
          });
      });
</script>
<fieldset>
    <legend>[% "Novedades de INTRA" | i18n %]:</legend>
        <div class="contenedor_paginador">[% paginador %]</div>
        [% IF novedades %]
            <div class="datos_tabla_div_user">
                <div class="well">[% "La cantidad de novedades es" | i18n %]: [% cant_novedades %]</div>
                
                [% PERL %]
                        print C4::AR::Filtros::tableHeader(   
                                          id              => "novedades_intra_table",
                                          class           => "",
                                          selectAll_id    => "",
                                          columns         => ['[% "Fecha"|i18n %]','[% "Usuario"|i18n %]',
                                                            '[% "T&iacute;tulo"|i18n %]', '[% "Resumen"|i18n %]',
                                                            '[% "Categor&iacute;a"|i18n %]', '[% "Acciones"|i18n %]'
                                                             ]
             
                                                ) ;
                    [% END %]

                    <tbody>
                        [% FOREACH novedad IN novedades %]
                            <tr class="leido[% novedad.getLeido %]">
                                <td>
                                    <a class="fancy_link" href="[% url_prefix %]/admin/global/ver_novedad_intra.pl?token=[% token %]&id=[% novedad.id %]">
                                        [% novedad.getFechaLegible %]
                                    </a>
                                </td>
                                <td>
                                    <a class="fancy_link" href="[% url_prefix %]/admin/global/ver_novedad_intra.pl?token=[% token %]&id=[% novedad.id %]">
                                        [% novedad.getUsuario%] 
                                    </a>
                                </td>
                                <td>
                                    <a class="fancy_link" href="[% url_prefix %]/admin/global/ver_novedad_intra.pl?token=[% token %]&id=[% novedad.id %]">
                                        [% novedad.getTitulo %] 
                                    </a>
                                </td>
                                <td>
                                    <a class="fancy_link" href="[% url_prefix %]/admin/global/ver_novedad_intra.pl?token=[% token %]&id=[% novedad.id %]">
                                        [% novedad.getResumen %] 
                                    </a>
                                </td>
                                <td>
                                    [% novedad.getCategoria %]
                                </td>
                                
                                <td style="width:150px">
                                
                                    [% PERL %]
                                        print C4::AR::Filtros::action_set_button(    
                                              title   => " [% 'Editar' | i18n %]",
                                              button  => 'btn btn-primary',
                                              url     => "[% url_prefix %]/admin/global/editar_novedad_intra.pl",
                                              params  =>  ["id=[% novedad.id %]"],
                                              icon    => "icon-white icon-edit",
                                              actions         => [
                                                                  { title   => "Eliminar", 
                                                                    action  => 'eliminarNovedad("[% novedad.id %]")', 
                                                                    icon    => "icon-remove",
                                                                   },
                                                                  ],

                     
                                                ) ;
                                    [% END %]
                            
                                </td>
                                
                            </tr>
                        [% END %]
                    </tbody>
                </table>
            </div>
        [% ELSE %]
            <h2>[% 'No hay novedades' | i18n %]</h2>
        [% END %]
</fieldset>
<div class="form-actions">
[% PERL %]
            print C4::AR::Filtros::to_Button(   text    => "[% 'Agregar novedad' | i18n %]",
                    boton   => "boton_buscar",
                    url=>"[% url_prefix %]/admin/global/agregar_novedad_intra.pl?token=[% token %]",
                    width => "auto",
                    title   => "[% 'Agregar novedad' | i18n %]",
                    ) ;
[% END %]
</div>
