	<font class="fontMsgUser"><b>
	<div id="mensajes"></div>
	</b></font>
</div>


<!-- Tabla de Sanciones -->
<table width="98%" align="center"  border="0" cellpadding="0" cellspacing="0" >
  <tr>
	<td valign="top">
[% IF sanciones_loop %]
		<table cellpadding="0" cellspacing="0" border="0">
		  <tr>
			<td>
			  <font color="red" size="3">
				<b>Ud. est&aacute; sancionado para los siguientes tipos de pr&eacute;stamo:
			  </font></b>
			  <ul>
		[% FOREACH sanciones_loop %]
			  [% IF description %]
				<li class="sancionesOPAC">[% description %] - Desde el [% startdate %] hasta el [% enddate %]
				</li>
			  [% END %]
		[% END %]
			  <ul>
			</td>
		  </tr>
		</table>
[% END %]
	</td>
  </tr>
</table>

<!-- para mostrar los resultados de las busquedas -->
<div id="result"></div>
<div id="resultHistoriales"></div>
<div id="datosUsuario">


<table width="98%" cellspacing="0" cellpadding="0" border="0" align="center">
<tbody>
  <tr>
	<td valign="top">
	<table class="tope" width="98%" cellspacing="0" cellpadding="4" border="0" align="center" valign="top">
	  <tr><td>
		<div id="detallePrestamos"></div>
	  <tr><td>
