// PARA MARCAR LOS CHECKBOX QUE CORRESPONDE
var l="[% libreD %]";
if(l=="11111"){
	var chk=document.getElementById("chk0");
	chk.checked=true;
	checkedAll(chk);
}
else{
	for(i=0;i<5;i++){
