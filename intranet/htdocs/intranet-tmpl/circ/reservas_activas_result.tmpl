<script type="text/javascript">
      $(document).ready(function() {
        makeToggle('datos_tabla_div','trigger',null,false);
      });
</script>

<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click">[% "Resultados de la b&uacute;squeda" | i18n %]</legend>
        <div class="datos_tabla_div" id="datos_tabla_div">
            <div class="resultados_consulta">[% "Total de registros" | i18n %]: [% cantidad %]</div>
            <div class="contenedor_paginador">[% paginador %]</div>
                <table id="tablaResult" class="datos_tabla table table-striped">
                  <thead>
                    <tr class="titulo_tabla_resultado">
                
                        <th title="[% 'Apellido del solicitante' | i18n %]"> [% "Apellido" | i18n %]</th>
                        <th title="[% 'Nombre del solicitante' | i18n %]"> [% "Nombre" | i18n %]</th>
                        <th class="click" onclick="ordenar('nro_socio')" title="[% 'Ordenar por numero de socio' | i18n %]">
                            [% "N&uacute;mero de socio" | i18n %]
                        </th>
                        <th class=""  title="[% 'E-mail del solicitante' | i18n %]">[% "E-mail" | i18n %]</th>
                        <th class="click" onclick="ordenar('fecha_reserva')" title="[% 'Ordenar por fecha de reserva' | i18n %]">[% "Fecha de reserva" | i18n %]</th>
                        <th class="click" onclick="ordenar('fecha_recordatorio')" title="[% 'Ordenar por fecha de vencimiento' | i18n %]">
                            [% "Fecha de vencimiento" | i18n %]
                        </th>
                        <th class="" title="[% 'C&oacute;digo de barra del ejemplar' | i18n %]">
                            [% "C&oacute;digo de barra" | i18n %]
                        </th>
                
                    </tr>
                  </thead>
                  <tbody>
                [% FOREACH reserva IN reservas %]
                    <tr>
                        <td> 
                            <a href="[% url_prefix %]/usuarios/reales/datosUsuario.pl?nro_socio=[% reserva.socio.getNro_socio %]">
                                [% reserva.socio.persona.getApellido %]
                            </a>
                        </td>
                        <td> 
                            <a href="[% url_prefix %]/usuarios/reales/datosUsuario.pl?nro_socio=[% reserva.socio.getNro_socio %]">
                                [% reserva.socio.persona.getNombre%]
                            </a>
                        </td>
                        <td> 
                            <a href="[% url_prefix %]/usuarios/reales/datosUsuario.pl?nro_socio=[% reserva.socio.getNro_socio %]">
                                [% reserva.socio.getNro_socio%]
                            </a>
                        </td>
                        <td> 
                            <a  href="mailto:[% reserva.socio.persona.getEmail %]">[% reserva.socio.persona.getEmail %] </a>
                        </td>
                        <td> 
                            [% reserva.getFecha_reserva_formateada %]
                        </td>
                        <td> 
                                [% IF rerserva.esEspera %]
                                   [% 'En espera de asignaci&oacute;n' | i18n %]
                                [% ELSE %]
                                   [% reserva.getFecha_recordatorio_formateada %]
                                [% END %]
                        </td>
                        <td> 
                            [% IF reserva.getId3 %]
                                <a href="[% url_prefix %]/catalogacion/estructura/detalleEjemplar.pl?id3=[% reserva.nivel3.getId %]&token=[% token %]">[% reserva.nivel3.getBarcode %]</a>
                            [% ELSE %]
                                <a href="[% url_prefix %]/catalogacion/estructura/detalle.pl?id1=[% reserva.nivel2.getId1 %]&token=[% token %]">Grupo [% reserva.nivel2.getId2 %]</a>
                            [% END %]
                        </td>
                    </tr>
                [% END %]
                </tbody>
                </table>
      </div>
</fieldset>
<br>

