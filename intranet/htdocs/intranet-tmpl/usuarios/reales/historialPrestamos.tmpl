<center>
    
    [% paginador %]
    [% USE HTML %]
    <p class="inputFontNormal"> 
	    <b>
                [% "Cantidad de pr&eacute;stamos realizadas:" | i18n %] &nbsp;[% cant %]</b>
            <br>
    </p>
    
    <table class="tablaHistorialPrestamos" cellspacing=0  cellpadding=0 border=0 width="100%">
        <tr>
	        <td class="tablaresultadoTitle" width="1%" align="right">
	        <img src="[% themelang %]/images/izquierda.png">
	        </td>
        
	        <td class="tablaresultadoTitle click" onclick="ordenar('titulo')" 
                        Title='[% "Ordenar por Titulo" | i18n %]'>
		        [% "T&iacute;tulo" | i18n %]
	        </td>
	        <td class="tablaresultadoTitle click" onclick="ordenar('autor')" 
                        Title='[% "Ordenar por Autor" | i18n %]'>
		        [% "Autor" | i18n %]
	        </td>
                <td class="tablaresultadoTitle">
                    [% "Edici&oacute;n" | i18n %]
            </td>
                <td class="tablaresultadoTitle click" onclick="ordenar('barcode')" 
                    Title='[% "Ordenar por C&oacute;digo" | i18n %]'>
		        [% "C&oacute;digo" | i18n %]
            </td>
	        <td class="tablaresultadoTitle">
		        [% "Pr&eacute;stamo" | i18n %]
	        </td>
                <td class="tablaresultadoTitle">
                    [% "Renovaci&oacute;n" | i18n %]
            </td>
	        <td class="tablaresultadoTitle">
		        [% "Vencimiento" | i18n %]
	        </td>
	        <td class="tablaresultadoTitle click" onclick="ordenar('fecha_devolucion')" 
                    Title='[% "Ordenar por Fecha de devoluci&oacute;n" | i18n %]'>
		        [% "Devoluci&oacute;n" | i18n %]
	        </td>
        
	        <td width="1%" class="tablaresultadoTitle">
	        <img src="[% themelang %]/images/derecha.png">
	        </td>
        </tr>
        
        [% FOREACH loop_reading %]
        <tr valign=middle align="center" class="inputFontNormal">
	        <td height=25 >&nbsp;</td>
	        <td>
		        [% PERL %]
				        print C4::AR::Filtros::link_to(	text => 	"[% HTML.escape(titulo) %]",
                                                        url => 		"/cgi-bin/koha/catalogacion/estructura/detalle.pl",
												        params =>	[	"id1=[% HTML.escape(id1) %]"], 
											        ) ;
		        [% END %]
	        </td>
	        <td>
		        [% PERL %]
				        print C4::AR::Filtros::link_to(	text => 	"[% autor %]",
												        url => 		"/cgi-bin/koha/busquedas/filtrado.pl", 
												        params =>	[	"origen=detalle", "idAutor=[% HTML.escape(idautor) %]"], 
											        ) ;
		        [% END %]
	        </td>
	        <td>
	        [% FOREACH grupos %]
        
		        [% IF edicion %]
			        [% edicion %]
		        [% END %]
        
		        [% IF publicationyear %]
			        &nbsp;([% publicationyear %])
                    [% END %]
	        
		        [% IF volume %]
			                t [% volume %]
		        [% END %]
        
	        [% END %]
	        </td>
	        <td align="center" >
		        [% PERL %]
				        print C4::AR::Filtros::link_to(	text => 	"[% barcode %]",
												        url => 		"/cgi-bin/koha/busquedas/detalleItem.pl", 
												        params =>	[	"id1=[% id1 %]", "id2=[% id2 %]", "id3=[% id3 %]", "barcode=[% barcode %]", 
																        "signatura_topografica=[% signatura_topografica %]"],
												        title =>	"[% "Detalle de disponibilidad" | i18n %]"
											        ) ;
		        [% END %]	
	        </td>
	        <td>
		        &nbsp;[% date_due %]&nbsp;
	        </td>
	        <td>
                [% IF date_renew %]
		            &nbsp;[% date_renew %]&nbsp;
                [% ELSE %]
                    --------
                [% END %]
	        </td>
	        <td>
                [% IF estaVencido %]
		            &nbsp;<span class="fecha_critica">[% date_fin %]</span>&nbsp;
                [% ELSE %]
                    &nbsp;<span class="fecha_cumple">[% date_fin %]</span>&nbsp;
                [% END %]
	        </td>
	        <td>
                [% IF returndate %]
		            &nbsp;[% returndate %]&nbsp;
                [% ELSE %]
                    --------
                [% END %]
	        </td>
        
	        <td height=25>&nbsp;</td>
        
        [% END %] <!-- FOREACH PRIMERO -->
    
    </table>

</center>

