<script type="text/javascript" src="/includes/jquery/fancybox/jquery.fancybox-1.2.1.pack.js"></script>
<link rel="stylesheet" type="text/css" href="[% temas %]/[% user_theme %]/includes/completo.css">
<script type="text/javascript">
      $(document).ready(function() {
        makeToggle('datos_tabla_div','trigger',null,false);
        $('.user_pic_fancy').fancybox();
      });
</script>

<fieldset class="resultados_busqueda">
<!--     <legend class="titulo_legend trigger click">[% "Resultados de la b&uacute;squeda" | i18n %]:</legend> -->
        <div class="datos_tabla_div" id="datos_tabla_div">
            <div class="resultados_consulta">[% "Total de registros" | i18n %]: [% cantidad %]  </div>
            <div class="contenedor_paginador">[% paginador %]</div>
                <table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width="100%">
                <thead>
                <tr class="titulo_tabla_resultado">
            
                    <th >[% "Tarjeta Id." | i18n %]
                        <span class="boton_eliminar_X click" style="float:right;" title="[% 'Eliminar Columna' | i18n %]" onclick="hideTableColumn(1,'hide_nro_socio')">&nbsp;</span>
                    </th>

                    <th >[% "Foto" | i18n %]
                        <span class="boton_eliminar_X click" style="float:right;" title="[% 'Eliminar Columna' | i18n %]" onclick="hideTableColumn(2,'hide_imagen')">&nbsp;</span>
                    </th>

                    <th >[% "Apellido y Nombres" | i18n %]
                        <span class="boton_eliminar_X click" style="float:right;" title="[% 'Eliminar Columna' | i18n %]" onclick="hideTableColumn(3,'hide_nom_ape')">&nbsp;</span>
                    </th>
                    <th >[% "Documento" | i18n %]
                        <span class="boton_eliminar_X click" style="float:right;" title="[% 'Eliminar Columna' | i18n %]" onclick="hideTableColumn(4,'hide_nro_documento')">&nbsp;</span>
                    </th>
                    <th >[% "Legajo" | i18n %]
                        <span class="boton_eliminar_X click" style="float:right;" title="[% 'Eliminar Columna' | i18n %]" onclick="hideTableColumn(5,'hide_legajo')">&nbsp;</span>
                    </th>
                    <th >[% "Cat." | i18n %]
                        <span class="boton_eliminar_X click" style="float:right;" title="[% 'Eliminar Columna' | i18n %]" onclick="hideTableColumn(6,'hide_categoria_socio_id')">&nbsp;</span>
                    </th>
                    <th>[% "Prest." | i18n %]</th>
                    <th>[% "Ven." | i18n %]</th>
                    <th>[% "Estado" | i18n %]</th>
            
                </tr>
                </thead>
                <tbody>
            
            [% FOREACH socio IN usuarios %]   
                <tr  align="center" style="height:50px">
            
                      <td align='left' class="tarjetaId">
                          [% PERL %]
                              print C4::AR::Filtros::link_to(   text =>     "[% socio.getNro_socio %]",
                                                                url =>      "/cgi-bin/koha/usuarios/reales/datosUsuario.pl", 
                                                                params =>   ["nro_socio=[% socio.getNro_socio %]"],
                                                                title =>    "[% 'Mostrar Detalle del Usuario' | i18n %]"
                                                          );
                          [% END %]
                      </td>
                      <td class="userImage"> 
                          [% IF socio.tieneFoto %]
                              <a class="user_pic_fancy" href="[% themelang %]/pictures/[% socio.tieneFoto %]">
                                  <img border="0" src="[% themelang %]/pictures/[% socio.tieneFoto %]" 
                                        alt="[% 'Imagen de' | i18n %] [% socio.persona.getApellido %], [% socio.persona.getNombre %]"
                                        title="[% socio.persona.getApellido %], [% socio.persona.getNombre %] ([% socio.getNro_socio %])"
                                        width="50px" height="50px"
                                  >
                              </a>
                          [% ELSE %]
                              <img border="0" src="[% temas %]/[% tema %]/imagenes/no_foto.jpg" 
                                    alt="[% 'Usuario sin foto' | i18n %]"
                                    title="[% 'Usuario sin foto' | i18n %]"
                                    width="50px" height="50px"
                              >
                          [% END %]
                      </td>
                      <td width=250 align="left" class="nomCompleto">
                          [% PERL %]
                              print C4::AR::Filtros::link_to(   text =>     "[% socio.persona.getApeYNom %]",
                                                                url =>      "/cgi-bin/koha/usuarios/reales/datosUsuario.pl", 
                                                                params =>   ["nro_socio=[% socio.getNro_socio %]"],
                                                                title =>    "[% 'Mostrar Detalle del Usuario' | i18n %]"
                                                          );
                          [% END %]
                      </td>
                      <td align="left" class="documento">
                          [% socio.persona.getVersion_documento %]&nbsp;[% socio.persona.getNro_documento %]
                      </td>
                      <td align="left" class="legajo">
                          [% socio.persona.getLegajo %]
                      </td>
                      <td align=center>
                          [% socio.categoria.getDescription %]
                      </td>
                      <td align=center>
                          [% issue %]
                      </td>
                      <td align=center>
                          [% od %]
                      </td>
                      <td align="center">
                      <span class="[% clase %]"><b>[% regular %]</b></span>
                      </td>
            
                </tr>
            
            [% END %]
            
                <tr>
                    <td class="lineafinaltabla"  align="left" colspan="14"></td>
                </tr>
                </tbody>
            
            </table>
        </div>
</fieldset>

<form id="exportPDF" action="/cgi-bin/koha/reports/usuariosResult.pl?token=[% token %]">
        <input type="hidden" name="export" value="pdf" />
        <input type="hidden" name="year" value="[% param_anio %]" />
        <input type="hidden" name="ui" value="[% param_ui %]" />
        <input type="hidden" name="category" value="[% param_categoria %]" />
        <input type="hidden" name="name_from" value="[% param_name_from %]" />
        <input type="hidden" name="name_to" value="[% param_name_to %]" />
        
        <input type="hidden" name="hide_nro_socio" id="hide_nro_socio" value=0 />
        <input type="hidden" name="hide_nro_documento" id="hide_nro_documento" value=0 />
        <input type="hidden" name="hide_imagen" id="hide_imagen" value=0 />
        <input type="hidden" name="hide_nom_ape" id="hide_nom_ape" value=0 />
        <input type="hidden" name="hide_categoria_socio_id" id="hide_categoria_socio_id" value=0 />
        <input type="hidden" name="hide_id_ui" id="hide_id_ui" value=0 />
        <input type="hidden" name="hide_legajo" id="hide_legajo" value=0 />
        <input type="hidden" name="hide_name_from" id="hide_name_from" value=0 />
        <input type="hidden" name="hide_name_to" id="hide_name_to" value=0 />
        <input type="hidden" name="hide_year" id="hide_year" value=0 />


</form>


<div class="buttonContainerHorizontal">
        [% PERL %]
            print C4::AR::Filtros::to_Button( 
                                                text    =>  "[% 'Exportar a PDF' | i18n %]",
                                                boton   =>  "boton_buscar",
                                                onClick =>  "submitForm('exportPDF');",
                    ) ;
        [% END %]
</div>
