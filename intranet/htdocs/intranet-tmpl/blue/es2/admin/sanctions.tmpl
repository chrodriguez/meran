[% INCLUDE "intranet-top.inc" %]


<script language="JavaScript">
	function borrar(sanctiontypecode, sanctionrulecode){
		document.frm.sanctiontypecode.value= sanctiontypecode;
		document.frm.sanctionrulecode.value= sanctionrulecode;
		document.frm.accion.value= 'delete';
		document.frm.submit();
	}

	function agregar(sanctiontypecode){
		document.frm.sanctiontypecode.value= sanctiontypecode;
		document.frm.accion.value= 'add';
		document.frm.submit();
	}

	function actualizar(){
		document.frm.accion.value= 'issuestypes';
		document.frm.submit();
	}
</script>
<table width="100%"  border="0" cellpadding="0" cellspacing="0" align="center" class="pagetitle" >
	<tr>
		<td>Tipos de sanciones</td>
	</tr>
	<tr>
		<td class="lineagruesa"  align="left" colspan="3"></td>
	</tr>
</table>
<br>
	<form name="frm" method="POST">
		<input type="hidden" name="accion">
		<input type="hidden" name="sanctiontypecode">
		<input type="hidden" name="sanctionrulecode">

<table border=0 cellspacing=0 cellpadding=0 width="80%">
	<tr class="tablaresultadoTitle">
		<td width="1%" align="left" valign="top"><img src="[% interface %]/[% themelang %]/images/izquierda.png"></td>
                <td>Tipos de pr&eacute;stamo</td>
                <td>Categorias de usuario</td>
		<td width="1%" align="right" valign="top"><img src="[% interface %]/[% themelang %]/images/derecha.png"></td>
	</tr>
        <tr valign=middle>
		<td height=25 class="[% clase %]">&nbsp;</td>
		<td class="inputFontNormal">[% issues_types %]</td>
		<td class="inputFontNormal">[% categories %]</td>
                <td height=25 class="[% clase %]">&nbsp;</td>
	</tr>
	<tr valign=bottom>
	        <td class="lineafinaltabla"  align="left" colspan="4"></td>
        </tr>
</table>

	<br><br>
<table border=0 cellspacing=0 cellpadding=0 width="80%">
	<tr class="tablaresultadoTitle">
		<td width="1%" align="left" valign="top"><img src="[% interface %]/ [% themelang %]/images/izquierda.png"></td>
                <td>&nbsp;</td>
                <td>Tipos de pr&eacute;stamo sobre el que se aplica</td>
		<td width="1%" align="right" valign="top"><img src="[% interface %]/ [% themelang %]/images/derecha.png"></td>
        </tr>
	[% FOREACH issues %]
		<tr valign="middle">
			<td height=25 class="[% clase %]">&nbsp;</td>
			<td class="inputFontNormal"><input class="inputFontNormal" type="checkbox" name="issuestypes" value="[% issuecode %]" [% IF checked %] "checked="checked [% END %] > </td>
			<td class="inputFontNormal">[% description %]</td>
			<td height=25 class="[% clase %]">&nbsp;</td>
		</tr>
	[% END %]
	<tr valign=bottom>
	        <td class="lineafinaltabla"  align="left" colspan="4"></td>
       	</tr>

	<td colspan="2"><FONT SIZE=2  face="arial, helvetica"><a href="#" onClick="actualizar();">Guardar</a></FONT></td>
</table>
	<br><br>

<table border=0 cellspacing=0 cellpadding=0 width="100%">
	<tr class="tablaresultadoTitle">
		<td width="1%" align="left" valign="top"><img src="[% interface %]/ [% themelang %]/images/izquierda.png"></td>
		<td>Orden</td>
                <td>Tipo de usuario</td>
                <td>Tipo de pr&eacute;stamo</td>
		<td>D&iacute;as de demora</td>
                <td>D&iacute;as de sanci&oacute;n</td>
                <td>Cantidad</td>
                <td> Eliminar</td>
		<td width="1%" class="right" valign="top"><img src="[% interface %]/ [% themelang %]/images/derecha.png"></td>
        </tr>
        [% FOREACH loop_sanctions_types %]
		<tr valign=middle>
			<td height=25 class="[% clase %]">&nbsp;</td>
			<td class="inputFontNormal">[% orden %]</td>
			<td class="inputFontNormal">[% desccategory %]</td>
			<td class="inputFontNormal">[% descissuetype %]</td>
			<td class="inputFontNormal">[% delaydays %]/td>
			<td class="inputFontNormal">[% sanctiondays %]</td>
			<td class="inputFontNormal">[% amount %]</td>
			<td><FONT SIZE=2 face="arial, helvetica"><a href="#" onClick="borrar('[% sanctiontypecode %]','[% sanctionrulecode %]');">Eliminar</a></FONT>
			</td>
			<td  class="[% clase %]">&nbsp;</td>
		</tr>
	[% FOREACH %]
	<tr valign=bottom>
	        <td class="lineafinaltabla"  align="left" colspan="9"></td>
        </tr>

        <tr>
        	<td colspan="7"><FONT SIZE=2  face="arial, helvetica"><a href="#" onClick="agregar('[% sanctiontypecode %]');">Agregar</a>&nbsp;Orden:[% orders %]&nbsp;Cantidad:[% amounts  %]&nbsp;Regla:[% sanctions_rules %]</FONT>
		</td>
        </tr>
</table>

<p>Para editar las reglas haga clic <A HREF="/cgi-bin/koha/admin/sanctionrules.pl">aqu&iacute;</a></p>

	</form>

