	onMouseOver="swap('mail','[% themelang %]/images/mailbis.png')">

<input onClick="printform.target='_self';printform.type.value='mail';submit();"  name="mail" id="mail" type="image" value="Mail"  
	src="[% themelang %]/images/mail.png" border="0" title="Enviar Resultados por Mail">
</a>
