<fieldset class="resultados_busqueda">
    <legend class="titulo_legend">[% "Hist&oacute;rico de Circulaci&oacute;n" | i18n %]:</legend>
    <ul>
                <li class="sub_item">
                     <label for="descripcion">[% "Fecha Inicial" | i18n %]</label>
                     <input type=text id="fecha_inicial" class="required" name="fecha_inicial" size=10 value="[% fecha_inicial %]">
                </li>
                <li class="sub_item">
                     <label for="sala">[% "Fecha Final" | i18n %]</label>
                     <input type=text id="fecha_final" class="required" name="fecha_final" size=10 value="[% fecha_final %]">

                                [% PERL %]
                                    print C4::AR::Filtros::to_Button(   text    => "[% 'Filtrar' | i18n %]",
                                                                        boton   => "boton_buscar",
                                                                        onClick => "verHistoricoCirculacion('[% nivel3.id %]');",
                                                                        title   => "[% 'Filtrar' | i18n %]",
                                                                        alternClass => "botonCentrado"
                                            ) ;
                                [% END %]
                </li>
    </ul>

        <div class="contenedor_paginador">[% paginador %]</div>
        <div class="datos_tabla_div_user">
            <table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width=100%>
                <thead>
                <tr class="titulo_tabla_resultado">
                    <th>[% "Usuario" | i18n %]</th>
                    <th>[% "Responsable" | i18n %]</th>
                    <th>[% "Fecha" | i18n %]</th>
                    <th>[% "Fecha Fin" | i18n %]</th>
                    <th>[% "Operaci&oacute;n" | i18n %]</th>
                    <th>[% "Tipo de Pr&eacute;stamo" | i18n %]</th>
                </tr>
                </thead>
                <tbody>
                    [% FOREACH historico IN historico_circulacion %]
                        <tr>
                              <td align='left' class="tarjetaId">
                                  [% PERL %]
                                      print C4::AR::Filtros::link_to(   text =>     "[% historico.socio.persona.getApeYNom %]",
                                                                        url=>"[% url_prefix %]/usuarios/reales/datosUsuario.pl", 
                                                                        params =>   ["nro_socio=[% historico.socio.getNro_socio %]"],
                                                                        title =>    "[% 'Mostrar Detalle del Usuario' | i18n %]"
                                                                  );
                                  [% END %]
                              </td>
                              <td align='left' class="tarjetaId">
                                    [% IF historico.responsable_ref == "Sistema" %]
										Sistema 
									[% ELSE %]
									  [% PERL %]
										  print C4::AR::Filtros::link_to(   text =>     "[% historico.responsable_ref.persona.getApeYNom %]",
																			url=>"[% url_prefix %]/usuarios/reales/datosUsuario.pl", 
																			params =>   ["nro_socio=[% historico.responsable_ref.getNro_socio %]"],
																			title =>    "[% 'Mostrar Detalle del Usuario' | i18n %]"
																	  );
									  [% END %]
									[% END %]
                                  
                              </td>
                            <td>
                                [% historico.getFecha_formateada %]
                            </td>
                            <td>
                                [% historico.getFecha_fin_formateada %]
                            </td>
                            <td>
                                [% historico.getTipo_operacion %] 
                            </td>
                            <td>
                                [% IF historico.tipo_prestamo_ref %][% historico.tipo_prestamo_ref.getDescripcion %][% ELSE %]-[% END %]
                            </td>
                        </tr>
                    [% END %]
                </tbody>
            </table>
            <div class="resultados_consulta">[% "La cantidad en el historial de circulaci&oacute;n es" | i18n %]: [% cant_historico %]</div>
            <div class="contenedor_paginador">[% paginador %]</div>
        </div>
</fieldset>
