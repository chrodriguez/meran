function modificarEncabezado(idEncabezado){

	$('#updateEncabezado').slideDown('slow');
	$('#nombreNuevo').val(jQuery.trim($('#encabezado'+idEncabezado).text()));
	$('#nombreNuevo').keyup(
		function () {
			$('#encabezado'+idEncabezado).text($('#nombreNuevo').val());
		});

