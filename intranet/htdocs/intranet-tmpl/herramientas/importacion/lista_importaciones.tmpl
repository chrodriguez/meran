<script type="text/javascript">

    $(document).ready(function() {
          makeToggle('datos_tabla_div_importacion','trigger',null,false);
    });

</script>

[% INCLUDE "FormValidateHelper.inc" %]

<div class="contenedor_paginador">[% paginador %]</div>
<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click">[% "Resultados de la b&uacute;squeda (Importaciones):" | i18n %]</legend>
        <div class="datos_tabla_div_importacion">
            <div class="resultados_consulta">[% "La cantidad de Importaciones es" | i18n %]: [% cantidad %]</div>
            <div class="resultados_consulta">[% "Ha buscado por" | i18n %]: [% importacion_busqueda %]</div>
            <table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width=100%>
                <thead>
                    <tr class="titulo_tabla_resultado">
                        <th>
                            [% "Nombre" | i18n %]
                        </th>
                        <th>
                            [% "Comentario" | i18n %]
                        </th>
                        <th>
                            [% "Formato" | i18n %]
                        </th>
                        <th>
                            [% "Esquema" | i18n %]
                        </th>
                        <th>
                            [% "Cantidad de Registros" | i18n %]
                        </th>

                        <th>
                            [% "Fecha Subida" | i18n %]
                        </th>
                        <th>
                            [% "Acciones" | i18n %]
                        </th>
                    </tr>
                </thead>
            <tbody>

            [% FOREACH importacion IN resultsloop %]
                <tr  align="center">

                      <td align="left">
                          [% importacion.getNombre %]
                      </td>
                      <td align="left">
                           [% importacion.getComentario %]
                      </td>
                      <td align="left">
                           [% importacion.getFormato %]
                      </td>
                      <td align="left">
                           [% importacion.getEsquema.getNombre %]
                      </td>
                      <td align="left">
                           [% importacion.getCantRegistros %]
                      </td>
                      <td align="left">
                           [% importacion.getFechaUpload_formateada %]
                      </td>
                      <!--  BOTONES ACCIONES (Editar, Borrar, Ver detalle) -->
                      <td align='left' width="9%" >
					  <div class="detalle_importacion">
						      [% PERL %]
                               print C4::AR::Filtros::action_group_link_button(    
                                    actions         => [
										{icon=>"icon-search",url=>"[% url_prefix %]/herramientas/importacion/detalle_importacion.pl", params =>   ["id_importacion=[% importacion.getId %]"]},
                                        {icon=>"icon-pencil",url=>"[% url_prefix %]/herramientas/importacion/importarDB.pl", params =>   ["tipoAccion=EDITAR", "id_importacion=[% importacion.getId %]"]},
                                        {action=>"borrarImportacion([% importacion.getId %]);", icon=>"icon-remove", class=>"btn-danger"},
                                                       ],
								);
                              [% END %]
					  </div>
                      </td>
                </tr>
            [% END %]
              <tr>
                    <td class="lineafinaltabla"  align="left" colspan="14"></td>
              </tr>
            </tbody>
            </table>
        </div>
</fieldset>
