[% IF HEADERS %]

    [% INCLUDE "intranet-top.inc" %]

    <!-- PARA PODER CREAR EL FORMULARIO -->
    <div id="formulario"></div>

[% END %]


<p align="center">[% "T&eacute;rmino de b&uacute;squeda:" | i18n %]<b> [% buscoPor %]</b>
<br>[% "Total de registros:" | i18n %] <b>[% cantidad %]</b>  en (<b>[% timeSeg %]</b> segundos)</p>
</div>

<center>
[% paginador %]
</center>
<table id="tablaResult" class="tablaResult" border=0 cellspacing=0 cellpadding=0 width=100%>
	<tr class="tablaresultadoTitle">
		<td width="2%" align="left" valign="top"><img src="[% themelang %]/images/izquierda.png">
		</td>

		<td width="5%"  class="tablaresultadoTitle">&nbsp;</td>
		<td width="35%" class="tablaresultadoTitleClick" 
			onClick="ordenar('titulo')" Title='[% "Ordenar por T&iacute;tulo" | i18n %]'>
			T&iacute;tulo
		</td>
		<td width="35%" class="tablaresultadoTitleClick" 
			onClick="ordenar('nomCompleto')" Title='[% "Ordenar por Autor" | i18n %]'>
			Autor
		</td>
		<td width="12%" class="tablaresultadoTitle">[% "Edici&oacute;n/A&ntilde;o" | i18n %]</td>
		<td width="15%" class="tablaresultadoTitle"> [% "Disponibilidad" | i18n %] </td>

		<td width="2%" align="right" valign="top"><img src="[% themelang %]/images/derecha.png">
		</td>
	</tr>
<!-- Actual Resultados de la b&uacute;squeda -->
[% FOREACH SEARCH_RESULTS %]
	<tr class="inputFontNormal">
		<td>&nbsp;</td>
		<td>
		[% IF amazon_cover %]
			<img name="cover"  VALUE="" BORDER=0 src="[% themelang %]/[% amazon_cover %]" title="Tapa">
		[% END %]
		</td>
		<td class="titulo_result">

<!--			<a href="/cgi-bin/koha/catalogacion/estructura/nuevo/detalle.pl?id1=[% id1 %]" title="Mostrar Detalle" class="click" >
				
				( [% hits %] ) - [% titulo %]
			</a>-->
			[% PERL %]
				print C4::AR::Filtros::link_to(	text => 	"( [% hits %] ) - [% titulo %]",
												url => 		"/cgi-bin/koha/catalogacion/estructura/nuevo/detalle.pl", 
												params =>	("id1=[% id1 %]"),
												title =>	"[% 'Mostrar Detalle' | i18n %]",
												class =>	"click"
											) ;
			[% END %]

		</td>

		<td class="autor_result">
			<a class="click" onClick="buscarPorAutor([% idAutor %])" title="[% 'Filtrar por Autor' | i18n %]">
				[% nomCompleto %]
			</a>
		</td>

		<td>
			[% FOREACH grupos %]
				[% IF edicion %]
					[% edicion %] &nbsp;
				[% END %]
				[% IF anio_publicacion %]
					([% anio_publicacion %])
				[% END %]
				[% IF volume %]
					t [% volume %]
				[% END %]<br>
			[% END %]
		</td>

		<td>
			[% FOREACH disponibilidad %]
				<b>[% tipoPrestamo %]</b> [% cantTotal %]
				<br>
				<div style="margin-right:4px">
                                    [% reservados %]
                                    <br> 
                                    [% prestados %]
                                    <br>
				</div>
         		[% END %]
		</td>	

		<td height=25>&nbsp;</td>
	</tr>
[% END %]
</table>

<br>

