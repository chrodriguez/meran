</script>

[% USE HTML %]

<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click">[% "Agregar novedad de OPAC" | i18n %]:</legend>
        <div class="form">
            [% IF editing %]
                <form id="form_novedad" action="[% url_prefix %]/admin/editar_novedad.pl" method="POST">
                    <input type="hidden" id="action" name="action" value="editar">
                    <input type="hidden" id="token" name="token" value="[% token %]">
                    <input type="hidden" id="novedad_id" name="novedad_id" value="[% novedad.id %]">
            [% ELSE %]
                <form id="form_novedad" action="[% url_prefix %]/admin/agregar_novedad.pl" method="POST">
                    <input type="hidden" id="action" name="action" value="agregar">
            [% END %]
                <ul>
                    <li class="sub_item">
                        <label for="titulo">[% "Titulo" | i18n %]</label>
                          <input type="text" id="titulo" name="titulo" value="[% novedad.getTitulo %]">
                    </li>
                    <li class="sub_item">
                        <label for="categoria">[% "Categor&iacute;a" | i18n %]</label>
                          <input type="text" id="categoria" name="categoria" value="[% novedad.getCategoria %]">
                    </li>
                     <li class="sub_item">
                       <label for="contenido">[% "Contenido" | i18n %]</label>
                          <textarea id="contenido" name="contenido" style="width: 88.3%" >[%novedad.getContenido %]</textarea>
                    </li>
                    [% IF twitter_enabled %]
                      <li class="sub_item">     
                          <input type="checkbox" id="check_publicar" name="check_publicar" value="publicar">[% " Publicar en Twitter" | i18n %]
                      </li>
                    [% END %]
                        <input type="hidden" id="token" name="token" value="[% token %]">
                        [% IF editing %]
                            [% PERL %]
                                        print C4::AR::Filtros::to_Button(   text    => "[% 'Modificar' | i18n %]",
                                                boton   => "boton_edicion",
                                                onClick => "modificar();",
                                                width => "auto",
                                                title   => "[% 'Modificar novedad' | i18n %]",
                                                ) ;
                            [% END %]
                        [% ELSE %]
                            [% PERL %]
                                        print C4::AR::Filtros::to_Button(   text    => "[% 'Agregar' | i18n %]",
                                                boton   => "boton_agregar",
                                                onClick => "agregar();",
                                                width => "auto",
                                                title   => "[% 'Agreagr novedad' | i18n %]",
                                                ) ;
                            [% END %]
                        [% END %]
                        
                  </ul>
              
            </form>
        </div>
</fieldset>
[% PERL %]
        print C4::AR::Filtros::link_to( text    =>  "[% 'Volver al listado' | i18n %]",
                                        url=>"[% url_prefix %]/admin/novedades_opac.pl",
                                        title   =>  "[% 'Volver al listado' | i18n %]"
                ) ;
[% END %]

[% INCLUDE 'intranet-bottom.inc' %]
