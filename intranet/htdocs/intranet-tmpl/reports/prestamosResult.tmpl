
<p >
    [% "La cantidad de pr&eacute;stamos es" | i18n %]: [% cantidad %]</p>
<p align="center">
    [% paginador %]
</p>


<table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width="100%" align="center">
 	<tr class="titulo_tabla_resultado">
		
		<th>
			<a class="click" name="checkAllPrestamos"><img src="[% themelang %]/images/check.png" border="0" title="Invertir la selecci&oacute;n"></a>
		</th>

		<th class="titulo_tabla_resultado click" onClick="ordenar('surname')">
			[% "Apellido" | i18n %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('firstname')">
			[% "Nombre" | i18n %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('cardnumber')">
			[% "Tarjeta de Id." | i18n %]
		</th>

		<th class="titulo_tabla_resultado click" onClick="ordenar('emailaddress')">
			[% "E-mail" %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('date_due')">
			[% "Fecha de prestamo" | i18n %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('vencimiento')">
			[% "Fecha de vencimiento" | i18n %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('barcode')">
			[% "C&oacute;digo de barra" | i18n %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('signatura_topografica')">
			[% "Signatura Topogr&aacute;fica" | i18n %]
		</th>
		<th class="titulo_tabla_resultado click" onClick="ordenar('description')">
			[% "Tipo de pr&eacute;stamo" | i18n %]
		</th>
	
	</tr>

[% FOREACH prestamo IN resultsloop %]

	<tr align='center'>
		
		<td > 
		      [% IF prestamo.vencido %]
               <input type="checkbox" name="chkboxPrestamos" value="[% prestamo.socio.getNro_socio %]" id="[% prestamo.socio.getNro_socio %]">
            [% END %]
		</td>

    	<td > 
            [% PERL %]
                print C4::AR::Filtros::link_to( text =>     "[%  prestamo.socio.persona.getNombre %]",
                                                url =>      "/cgi-bin/koha/usuarios/reales/datosUsuario.pl", 
                                                params =>   ["nro_socio=[%  prestamo.socio.persona.getNro_socio %]"],
                                                title =>    "[% 'Mostrar Detalle del Usuario' | i18n %]"
                                            ) ;
            [% END %]
		</td>

		<td > 
			[% prestamo.socio.persona.getNombre %] 
		</td>

		<td > 
			[% prestamo.socio.getNro_socio %]
		</td>

		<td > 
			[% IF prestamo.socio.persona.getEmail %]
               <a  href="mailto:[% prestamo.socio.persona.getEmail %]">
                    [% prestamo.socio.persona.getEmail %]
              </a>
   		[% ELSE %]
                    [% prestamo.socio.persona.getEmail %]
        [% END %]
		</td>

		<td > 
			[% prestamo.getFecha_prestamo %]
		</td>

		<td > 
			[% prestamo.getFecha_vencimiento %]
		</td>

		<td > 
			<a href='/cgi-bin/koha/busquedas/detalleItem.pl?id1=[% id1 %]&id2=[% id2 %]&id3=[% prestamo.getId3 %]&barcode=[% prestamo.nivel3.getBarcode %]&signatura_topografica=[% prestamo.nivel3.getSignatura_topografica %]' title='Detalle de disponibilidad'>
            [% prestamo.nivel3.getBarcode %]
         </a>
		</td>

		<td > 
			<a  href="/cgi-bin/koha/detalle.pl?id1=[% prestamo.nivel3.getId1 %]">
            [% prestamo.nivel3.getSignatura_topografica %]
         </a>
		</td>

	</tr>
[% END %]
</table>

<br>
<input type="hidden" name="tipo" value="0">

<a href="#" title="Enviar Mail" onClick="enviarMails();">
<input id="contacto" type="image" src="[% themelang %]/images/contactar.png" title=[% "Enviar mail a usuarios con ejemplares atrasados" | i18n %]>
</a>
