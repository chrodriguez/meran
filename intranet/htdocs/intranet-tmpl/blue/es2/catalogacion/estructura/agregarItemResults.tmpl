[% IF itemtype != '-1' %]

        <b>[% mensaje %]</b>
        
        [% IF titulo %]
            <div name="menuNivel1y2" style="float:left; width:20%; height:100%" >
                    <div class="inputFontNormal">
                    <a href="../busquedas/detalle.pl?id1=[% id1 %]"><p class="pagetitle" >
                            [% titulo %]
                            </p>
                    </a>
            
                    <b>[% "Autor:" | i18n %] </b> [% autor %]<br>
                    [% "Regitro de nivel 1:" | i18n %] [% id1 %]
                    <br>
            
                    <input type="image" name="submit" value="modify" border="0"  src="[% themelang %]/images/editar.png"   border=0 title=[% "Modificar Nivel 1" | i18n %] onClick=modificarN1(id1)>
            
                    <input TYPE="image" name="delete"  VALUE="delete" BORDER=0 src="[% themelang %]/images/borrar.png"   onClick="if (window.confirm('&#191;[% "Est&aacute; seguro que desea borrarlo?" | i18n %]')) {borrarN1([% id1 %]);} else {return false;}" title=[% "Borrar Nivel 1" | i18n %]>
                    </div>
            
            <!-- INFORMACION NIVEL 2 - GRUPOS -->
            [% FOREACH resultsGrupos %]
                    <div>
                    <p class="inputFontNormal"> 
                            <b>[% "Grupo:" | i18n %] [% id2 %] - [% tipo_documento %]</b><br>
                            
                            <input type="image" name="submit" value="modify" border="0"  src="[% themelang %]/images/editar.png" title=[% "Modificar Grupo" | i18n %] onClick="modificarGrupo('[% id1 %]','[% id2 %]')">
                            
                            <input type="button" name="agregar" value="+" border="0"  title=[% "Agregar Ejemplar" | i18n %] onClick="agregarEjemplar([% id1 %],[% id2 %],'[% itemtype %]')">	
            
                            <input TYPE="image" name="delete"  VALUE="delete" BORDER=0 src="[% themelang %]/images/borrar.png"   onClick="if (window.confirm('&#191;[% "Est&aacute; seguro que desea borrarlo?" | i18n %]')) {borrarGrupo('[% id1 %]' ,'[% id2 %]');} else {return false;}" title=[% "Borrar Grupo" | i18n %]>
                            <br>
                            [% IF nivel_bibliografico %]
                                    [% "Nivel bibliogr&aacute;fico:" | i18n %] [% nivel_bibliografico %]<br>
                            [% END %]
        
                            [% IF soporte %]
                                    [% "Soporte:" | i18n %] [% soporte %] <br>
                            [% END %]
                            [% IF pais_publicacion %]
                                    [% "Lugar:" | i18n %] [% pais_publicacion %]
                                    [% IF ciudad_publicacion %]
                                            - [% ciudad_publicacion %]
                                    [% END %]
                                    <br>
                            [% END %]
                            [% IF lenguaje %]
                                    [% "Idioma:" | i18n %] [% lenguaje %]<br>
                            [% END %]
                            [% IF anio_publicacion %]
                                    Fecha: [% anio_publicacion %]<br>
                            [% END %]
                            Cantidad Ejemplares: [% cantItems %]
                       </p>
                  </div>	
            [% END %]
        <!-- FIN INFORMACION NIVEL 2 -->
        </div>
        
        [% END %]
        
        <br><br>
        
        [% IF titulo %]
            <div id="contenido" style="float:right; width:80%">
        [% ELSE %]
        <div id="contenido">
        [% END %]
        
        <table width="100%" cellspacing="0" cellpadding="0" border="0">
                <tr class="tablaresultadoTitle">
                        <td width="1%" align="left" valign="top"><img src="[% themelang %]/images/izquierda.png"></td>
                        <td colspan="7" class=inputFontNormal> 
                                <b>[% "Agregar Documento:" | i18n %] [% descripcion %]  (paso: [% paso %] de 2) </b>
                        </td>
                        <td width="1%" align="right" valign="top"><img src="[% themelang %]/images/derecha.png"></td>
                </tr>
        </table>
        
        <br>
        
        <!-- CAMPOS DEL NIVEL 1 y 2 -->
        <div id="parrafo1">
        [% IF paso == 1 %]
                <p>
                <label for="autor" style="float: left; width:25%" class="inputFontNormal">
                        [% "Autor:" | i18n %]
                </label>
                <input type="text" id="autor" name="autor" value="[% autor %]">
                <input type="hidden" id="idAutor" value="[% idAutor %]">
                </p>
        [% END %]
        </div>
        
        <div style="clear:both" id="input1" class="boton" onClick="agregarCampoTemp([% paso %],[% paso %])"><img title=[% "Agregar campo temporal" | i18n %] src="[% themelang %]/images/agregar_temporal.png"></div>
        
        
        <br><br>
        
        <!-- CAMPOS DEL NIVEL 3 -->
        
        [% IF paso == 2 %]
            <div id="parrafo2">
                    <br>
                    <hr>
                    <br>
                    <label for="codbarra" style="float: left; width:25%" >
                            [% "C&oacute;digo de barra:" | i18n %]
                    </label>
                    <input type="text" id="codbarra"> ([% "Si deja en blanco autogenera" | i18n %]) <br><br>
            
                    <label for="cantitems" style="float: left; width:25%" >
                            [% "Cantidad:" | i18n %]
                    </label>
                    <input type="text" id="cantitems" value="1"><br><br>
            </div>
            
            <div style="clear:both" id="input2" class="boton" onClick="agregarCampoTemp([% paso %],3)"><img title=[% "Agregar campo temporal" | i18n %] src="[% themelang %]/images/agregar_temporal.png"></div>
        [% END %]
        
        <br>
        
        <p><b>&nbsp;* [% "Campos obligatorios" | i18n %]</b></p>
        
        <center>
        <input type="image" src="[% themelang %]/images/guardar.png" value=[% "Guardar Item nivel 1" | i18n %] title="Guardar Item" onClick="guardarItem([% paso %])">
        </center>
        
        
        <div id="ocultos">
        <!-- Cantidad de campos generados dinamicamente -->
        <input type="hidden" id="cantIds" value="[% cantIds %]">
        <!-- id de la tupla generada en la tabla del nivel1 -->
        <input type="hidden" id="id1" value="[% id1 %]">
        <input type="hidden" id="nivel" value="[% nivel %]">
        <input type="hidden" id="accion" value="[% accion %]">
        </div>
        
        </div>
[% END %]




