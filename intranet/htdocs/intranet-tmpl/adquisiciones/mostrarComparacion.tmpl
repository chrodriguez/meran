<fieldset>
                            [% nro_renglon = 1 %]

                           
                            [% FOREACH det IN detalle_pedido %]
                                     <strong>[% detalle_pedido.$nro_renglon.nro_renglon %]</strong>
                                     <strong>[% det.nro_renglon %]</strong>
                                     <strong>[% det.autor %]</strong>
                                     <strong>[% det.titulo %]</strong>
                                    
                                    [% FOREACH pres IN presupuestos %]
                                                  <li>[% pres.cant%] - [% pres.precio_unitario %] - [% pres.total %]</li> 
                                    [% END %]
                                    
                                    [% nro_renglon = nro_renglon + 1 %] 
                            [% END %]
         
          
</fieldset>





                  