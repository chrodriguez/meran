								IdInputHidden: 'nro_socio_hidden', 
								callBackFunction: detalleDelUsuario
						});

	//se crea el autocomplete para buscar por codigo de barras
	CrearAutocompleteBarcodesPrestados({	IdInput: 'barcode', 
											IdInputHidden: 'nro_socio_hidden', 
											callBackFunction: detalleDelUsuario
										});
});


</script>

