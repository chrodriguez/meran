[% INCLUDE "intranet-top.inc" %]

<script>

    function ordenar(orden){
        objAH.sort=orden;
        objAH.sendToServer();
    }

    function consultar(){
        objAH=new AjaxHelper(updateInfo);
        objAH.url= "/cgi-bin/koha/reports/inventoryResult.pl";
        objAH.desde= $("#desde").val();
        objAH.hasta= $("#hasta").val();
        //se envia la consulta
        objAH.sendToServer();
    }

    function updateInfo(responseText){
        $("#result").html(responseText);
        zebra("tablaResult");
    }
    $(document).ready(function() {
        //onEnter con foco en input, ejecuta la busqueda
        onEnter("desde",consultar);
        onEnter("hasta",consultar);

    });
</script>

<div class="titulos_interior" >[% "Inventario:" | i18n %]</div>

<center>
<table border="0" cellspacing="0" cellpadding="0" width="90%">
