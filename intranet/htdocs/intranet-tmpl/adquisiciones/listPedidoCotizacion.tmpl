[% INCLUDE "intranet-top.inc" %]

<script type="text/javascript" language="javascript">
    $(document).ready(function() {
        $('#presupuesto').hide()  
   });
   
   // TODO llamamos por ajax al combo de proveedores para presupuestar el pedido de cotizacion
   
   function presupuestar(){
        objAH                       = new AjaxHelper(updatePresupuestar)
        objAH.url                   = '/cgi-bin/koha/adquisiciones/pedidoCotizacionDB.pl'
        objAH.debug                 = true

        objAH.pedido_cotizacion_id = $('#pedido_cotizacion_id').val()

          
        objAH.tipoAccion            = 'PRESUPUESTAR'
        objAH.sendToServer()  
   
   }
   
   function updatePresupuestar(responseText){
    if (!verificarRespuesta(responseText))
            return(0);
    var Messages=JSONstring.toObject(responseText);
    setMessages(Messages);
}

</script>

    <input type="hidden" id="proveedores" name="proveedores" value="">
    <fieldset id="datos_proveedor">
    <legend class="titulo_legend">[% "Pedidos De Cotizaci&oacute;n" | i18n %]</legend>
      <table id="tablaEjemplaresCompra" name="tabla" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 >
      <thead>
          <tr class="titulo_tabla_resultado">
              <th>
                  [% "Pedido de Cotizacion" | i18n %]
              </th>
              <th>
                  [% "Fecha" | i18n %]
              </th>
              <th>
                  [% "Acciones" | i18n %]
              </th>
          </tr>
      </thead>
      <tbody>
            [% i = 1 %]
            [% FOREACH resultsloop %]   
            <tr align="center">
                <td align="right" >
                    <input type="text"  value="[% i %]" readonly> 
                <td align="right" >
                    <input type="text" value="[% pedido_cotizacion.fecha %]" readonly>  
                </td>
                <td align="right" >
                    <div class="click horizontal icon_mas">
                              [% PERL %]
                                            print C4::AR::Filtros::link_to(   
                                                                            text =>     C4::AR::Filtros::to_Icon( boton   => "icon_mas" ),
                                                                            url =>      "/cgi-bin/koha/adquisiciones/datosPedidoCotizacion.pl", 
                                                                            params =>   ["id_pedido_cotizacion=[% pedido_cotizacion.getId %]",
                                                                                        "action=DETALLE"],
                                                                            title =>    "[% 'Ver Detalles' | i18n %]"
                                                                        );
                              [% END %]
                    </div>
                    <div class="click horizontal icon_edicion">
                              [% PERL %]
                              print C4::AR::Filtros::link_to(
                                                            text =>     C4::AR::Filtros::to_Icon( boton   => "icon_edicion" ),
                                                            url =>  "/cgi-bin/koha/adquisiciones/datosPedidoCotizacion.pl", 
                                                            params =>   ["action=EDITAR", "id_pedido_cotizacion=[% pedido_cotizacion.getId %]"],
                                                            title =>    "[% 'Editar Pedido' | i18n %]"
                                                          );
                             [% END %]
                     </div>
                              [% PERL %]
                              print C4::AR::Filtros::to_Button( 
                                                text    =>  "[% 'Presupuestar Pedido' | i18n %]",
                                                boton   =>  "boton_buscar",
                                                onClick =>  "presupuestar()",
                    ) ;
                             [% END %]
                  </td>
            </tr>  
            [% i = i + 1 %]      
            [% END %]    
    </tbody>   
    </table>
</fieldset>

<input type="hidden" value="[% pedido_cotizacion.getId %]" id="pedido_cotizacion_id" />

<div id="presupuesto"></div>



[% INCLUDE "intranet-bottom.inc" %]
