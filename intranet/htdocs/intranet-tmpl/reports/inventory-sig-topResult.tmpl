[% USE HTML %]
<br>

<p  align="center">
    [% "La cantidad Total de ejemplares es:" | i18n %] [% cantidad %]
</p>

<br>


<table id="tablaResult" class="datos_tabla" border="0" cellspacing="0" cellpadding="0" width="100%">
    <tr class="titulo_tabla_resultado click">

        <th onClick="ordenar('barcode');">[% "Nro. de Inventario" | i18n %]</th>
        <th onClick="ordenar('bulk');">[% "Signatura Topogr&aacute;fica" | i18n %]</th>
        <th onClick="ordenar('completo');">[% "Autor" | i18n %]</th>
        <th onClick="ordenar('title');">[% "T&iacute;tulo" | i18n %]</th>
        <th onClick="ordenar('number');">[% "Edic." | i18n %]</th>
        <th onClick="ordenar('publisher');">[% "Editor" | i18n %]</th>
        <th onClick="ordenar('publicationyear');">[% "A&ntilde;o" | i18n %]</th>

    </tr>

    [% FOREACH cat_nivel3 IN results %]
            <tr >
                    <td  align="center">
                            [% cat_nivel3.getBarcode %]
                    </td>
                    <td align="center">
                            [% cat_nivel3.getSignatura_topografica %]
                    </td>
                    <td align="center">
                            [% cat_nivel3.nivel2.nivel1.cat_autor.getNombre %]
                    </td>
                    <td align="center">
                            [% HTML.escape(cat_nivel3.nivel2.nivel1.getTitulo) %]
                            [% IF cat_nivel3.unititle %]:&nbsp;
                                    [% HTML.escape(unititle) %]
                            [% END %]
                    </td>
                    <td align="center">
                            [% number %]
                    </td>
                    <td align="center">
                            [% publisher %]
                    </td>
                    <td align="center">
                            [% cat_nivel3.nivel2.getAnio_publicacion %]
                    </td>
            </tr>

    [% END %]
</table>

<br><br>

<center>
    [% PERL %]
        print C4::AR::Filtros::link_to(  text    => "[% 'Generar Planilla' | i18n %]",
                                         title    => "[% 'Generar Planilla' | i18n %]",
                                         boton   => "boton_buscar",
                                         url => "/cgi-bin/koha/reports/plantillas/generatesxc.pl?name=[% name %]",
                                        width => 150,
                ) ;
    [% END %]

</center>