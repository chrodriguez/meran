<script language="javascript">
[% INCLUDE "epoch_classes.js" %]

/*You can also place this code in a separate file and link to it like epoch_classes.js*/
        var dp_ini,dp_fin;      
	window.onload = function () {
		        dp_ini  = new Epoch('epoch_popup','popup',document.getElementById('f_ini'));
			dp_fin  = new Epoch('epoch_popup','popup',document.getElementById('f_fin'));
				};

var objAH;
function ordenar(orden){
	objAH.sort(orden);
}

function updateInfo(responseText){
	$("#result").html(responseText);
	zebra("tablaResult");
}

function changePage(ini){
	objAH.changePage(ini);
}

function consultar(){
	objAH=new AjaxHelper(updateInfo);
	objAH.f_ini= $('#f_ini').val();
	objAH.f_fin= $('#f_fin').val();
	objAH.tiposItems= $('#tiposItems').val();
	objAH.tipoPrestamos=$('#tipoPrestamos').val();
	objAH.catUsuarios=$('#catUsuarios').val();
	objAH.url= "/cgi-bin/koha/reports/historico_PrestamosResult.pl";
	objAH.funcion="changePage";
	objAH.sendToServer();
}


</script>


