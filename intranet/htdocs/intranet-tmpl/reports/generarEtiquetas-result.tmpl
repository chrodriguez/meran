[% paginador %]
<table border="0" cellspacing="0" cellpadding="0"  width="90%" align="center">
    <tr class="tablaresultadoTitle">

        <td><a href="#" onclick="ordenar('barcode')">[% "Nro. de Inventario" | i18n %]</a></td>
        <td><a href="#" onclick="ordenar('completo')">[% "Autor" | i18n %]</a></td>
        <td><a href="#" onclick="ordenar('titulo')">[% "T&iacute;tulo" | i18n %]</a></td>
        <td><a href="#" onclick="ordenar('number')">[% "Edic." | i18n %]</a></td>
        <td><a href="#" onclick="ordenar('publisher')">[% "Editor" | i18n %]</a></td>
        <td><a href="#" onclick="ordenar('anio_publicacion')">[% "A&ntilde;o" | i18n %]</a></td>
        <td><a href="#" onclick="ordenar('signatura_topografica')">[% "Signatura Topogr&aacute;fica" | i18n %]</a></td>

    </tr>

    [% FOREACH nivel3 IN RESULTSLOOP %]
        <tr>
                <td  align="center" class="[% clase %]" >
                        [% nivel3.getBarcode %]
                </td>
                <td class="[% clase %]"  align="center">
                        [% IF !nive3.nive2.nivel1.cat_autor.getCompleto %]
                            ----
                        [% ELSE %]
                            [% nive3.nivel1.cat_autor.getCompleto %]
                        [% END %]
                </td>
                <td class="[% clase %]"  align="center">
                    <a href='/cgi-bin/koha/detail.pl?type=intra&bib=[% HTML.escape(biblionumber) %]'>
                        [% nivel3.nivel1.getTitulo %]
                    </a>
                </td>
                <td class="[% clase %]"  align="center">
                        [% number %]
                </td>
                <td class="[% clase %]"  align="center">
                        [% publisher %]
                </td>
                <td class="[% clase %]"  align="center">
                        [% anio_publicacion %]
                </td>
                <td class="[% clase %]" align="center">
                        [% nivel3.getSignatura_topografica %]
                </td>
        </tr>

    [% END %]

    <tr>
    <td colspan="9">
        <p align="left">[% "La cantidad de ejemplares es:" | i18n %] <b>[% cantidad %]</b></p>
    </td>
    </tr>

</table>

<div class="buttonContainerHorizontal">
    <script> filtrar = 'filtrar'; </script>
    [% PERL %]
                    print C4::AR::Filtros::to_Button( 
                                                        text    =>  "[% 'a PDF' | i18n %]",
                                                        boton   =>  "boton_buscar",
                                                        onClick =>  "consultar(filtrar)",
                                                    );
    [% END %]
</div>

<div id="formulario"></div>