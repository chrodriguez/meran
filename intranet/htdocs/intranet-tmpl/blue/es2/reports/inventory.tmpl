[% INCLUDE "intranet-top.inc" %]

<script src="/intranet-tmpl/blue/es2/includes/util.js"></script>

<script>
function ordenar(orden){
	objAH.sort=orden;
	objAH.sendToServer();
}

function consultar(){
	objAH=new AjaxHelper(updateInfo);
	objAH.url= "/cgi-bin/koha/reports/inventoryResult.pl";
	objAH.desde= $("#desde").val();
	objAH.hasta= $("#hasta").val();
	//se envia la consulta
	objAH.sendToServer();
}

function updateInfo(responseText){
	$("#result").html(responseText);
	zebra("tablaResult");
}

</script>

<table width="100%"  border="0" cellpadding="0" cellspacing="0">
	<tr>
		<td class="pagetitle" >[% "Inventario:" | i18n %]</td>
	</tr>
	<tr>
		<td class="lineagruesa"  align="left" colspan="3"></td>
	</tr>
</table>
<br>

<center>
<table border="0" cellspacing="0" cellpadding="0" width="90%">
	<tr class="tablaresultadoTitle">
		<td align="left"><img src="[% interface %]/[% themelang %]/images/izquierda.png"></td>
		<td align="center" width="30%">[% "Tipo" | i18n %]</td>
		<td align="center">[% "M&iacute;nimo" | i18n %]</td>
		<td align="center">[% "M&aacute;ximo" | i18n %]</td>
		<td align="right"><img src="[% interface %]/[% themelang %]/images/derecha.png"></td>
	</tr>

[% FOREACH barcodePorTipo %]
  	<tr align="center">
		<td class="[% clase %]">&nbsp;</td>
	 	<td class="[% clase %]"> [% tipo %] </td>
	 	<td class="[% clase %]"> [% minimo %] </td>
	 	<td class="[% clase %]"> [% maximo %] </td>
		<td class="[% clase %]">&nbsp;</td>
 	</tr>
[% END %]
</table>
</center>
<br>
<table border="0" cellspacing="0" cellpadding="0" align="left">
	<tr>
		<td class="inputFontNormal">[% "Localizaci&oacute;n del ejemplar entre &nbsp;" | i18n %]</td>
		<td class="inputFontNormal">
			<input class="inputFontNormal" type="text" id="desde" value="[% desde %]">&nbsp; y &nbsp;
			<input  class="inputFontNormal" type="text" id="hasta" value="[% hasta %]">&nbsp;
		</td>
		<td><input type="image" src="[% themelang %]/images/boton-buscar.png" border="0" onClick="consultar(0,'barcode')"></td>
	</tr>
</table>

<br>
<p class="inputFontNormal" align="left">[% "El m&iacute;nimo inventario existente es:" | i18n %] <b>[% MIN %] </b>[% " y el m&aacute;ximo es:" | i18n %] <b>[% MAX %]</b>. </p> 

<div id="result"></div>


[% INCLUDE "intranet-bottom.inc" %] 
