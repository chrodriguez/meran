[% INCLUDE "intranet-top.inc" %]

<script>
    function ordenar(orden){
	    objAH.sort=orden;
	    objAH.sendToServer();
    }
    
    function consultar(){
	    objAH=new AjaxHelper(updateInfo);
	    objAH.url= "/cgi-bin/koha/reports/inventory-sig-topResult.pl";
	    objAH.sigtop= $("#sigtop").val();
	    //se envia la consulta
	    objAH.sendToServer();
    }
    
    function updateInfo(responseText){
	    $("#result").html(responseText);
	    zebra("tablaResult");
    }
    $(document).ready(function() {
        //onEnter con foco en input, ejecuta la busqueda
        onEnter("sigtop",consultar);
    });
</script>

<div class="titulos" >[% "Inventario por signatura topogr&aacute;fica:" | i18n %]</div>

