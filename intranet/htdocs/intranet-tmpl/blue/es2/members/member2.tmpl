function consultar(){
	
	var p= 	'member=' + $('#member').val();

	$.ajax({	type: "POST", 
			url: "/cgi-bin/koha/members/member2Result.pl",
			data: p,
			beforeSend: Init,
 			complete: function(ajax){
					$('#result').html(ajax.responseText);
					zebra('tablaResult');
					$('#tablaResult').tablesorter({	
 									widgets: ['zebra'],
  									headers: { 0: { sorter: false},
										   1: { sorter: false},
 										   9: { sorter: false}}
// ,
//  									debug: true
								})
							.tablesorterPager({container: $("#pager")})
					Complete();
				}
	});

}

function Borrar(){
	$('#member').val('');
}

function Complete(){
	HiddeState();
}

function Buscar(){
	var busqueda = $('#member').val();
	if(busqueda != ""){
		consultar();	
	}else{
		alert("Ingrese un dato");
		$('#member').focus();
	}
}

$(document).ready(function() {

	//onEnter con foco en input, ejecuta la busqueda
	$("#member").keypress(function (e) {
		if(e.which == 13){
			Buscar();
		}
	});

});



