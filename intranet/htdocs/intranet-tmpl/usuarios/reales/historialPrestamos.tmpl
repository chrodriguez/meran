[% USE HTML %]

[% IF historial %]
		<div class="resultados_consulta">[% "Cantidad de pr&eacute;stamos realizados" | i18n %]: &nbsp;[% cant %]</div> 
		
		<div class="contenedor_paginador">[% paginador %]</div>
		
		<table class="tablaHistorialPrestamos datos_tabla" cellspacing=0  cellpadding=0 border=0 width="100%">
		    <tr class="titulo_tabla_resultado">
		    
			    <td class="click" onclick="ordenar('titulo')" 
		            Title='[% "Ordenar por t&iacute;tulo" | i18n %]'>
				    [% "T&iacute;tulo" | i18n %]
			    </td>
			    <td class="click" onclick="ordenar('autor')" 
		            Title='[% "Ordenar por Autor" | i18n %]'>
		            [% "Autor" | i18n %]
			    </td>
		        <td>
		                [% "Edici&oacute;n" | i18n %]
		        </td>
		            <td class="click" onclick="ordenar('barcode')" 
		                Title='[% "Ordenar por C&oacute;digo" | i18n %]'>
				    [% "C&oacute;digo" | i18n %]
		        </td>
			    <td>[% "Pr&eacute;stamo" | i18n %]</td>
		        <td>[% "Renovaci&oacute;n" | i18n %]</td>
                <td>[% "Catidad de Renovaciones" | i18n %]</td>
			    <td>[% "Vencimiento" | i18n %]</td>
			    <td class="click" onclick="ordenar('fecha_devolucion')" 
		                Title='[% "Ordenar por Fecha de devoluci&oacute;n" | i18n %]'>
				    [% "Devoluci&oacute;n" | i18n %]
			    </td>
		    
		    </tr>
		    
		    [% FOREACH prestamo IN historial %]

		    <tr valign=middle align="center">

			    <td>
				    [% PERL %]
						    print C4::AR::Filtros::link_to(	text => 	"[% HTML.escape(prestamo.nivel3.nivel1.getTitulo) %]",
		                                                    url => 		"/cgi-bin/koha/catalogacion/estructura/detalle.pl",
														    params =>	[	"id1=[% HTML.escape(prestamo.nivel3.nivel1.id) %]"], 
													    ) ;
				    [% END %]
			    </td>
			    <td>
			
                            <a class="click" onClick="buscarPorAutor('[% prestamo.nivel3.nivel1.getAutor %]')" title="[% 'Filtrar por Autor' | i18n %]">
                                  [% prestamo.nivel3.nivel1.getAutor %]
                            </a>
                              
						  
				  
			    </td>
			    <td>
			   
		    
				    [% IF prestamo.nivel3.nivel2.getEdicion %]
					    [% prestamo.nivel3.nivel2.getEdicion %]
				    [% END %]
		    
				    [% IF prestamo.nivel3.nivel2.getAnio_publicacion %]
					    &nbsp;([% prestamo.nivel3.nivel2.getAnio_publicacion %])
		            [% END %]

		    
			
			    </td>
			    <td align="center" >
				    [% PERL %]
						    print C4::AR::Filtros::link_to(	text => 	"[% prestamo.nivel3.getBarcode %]",
														    url => 		"/cgi-bin/koha/catalogacion/estructura/detalleEjemplar.pl", 
														    params =>	["id3=[% prestamo.id3 %]"],
														    title =>	"[% "Detalle del Ejemplar" | i18n %]"
													    ) ;
				    [% END %]	
			    </td>
			    <td>
				    &nbsp;[% prestamo.fecha_prestamo %]&nbsp;
			    </td>
			    <td>
		            [% IF prestamo.fecha_ultima_renovacion %]
				        &nbsp;[% prestamo.fecha_ultima_renovacion %]&nbsp;
		            [% ELSE %]
		                --------
		            [% END %]
			    </td>
                <td>
                    &nbsp;[% prestamo.renovaciones%]&nbsp;
                </td>
			    <td>
		            [% IF estaVencido %]
				        &nbsp;<span class="fecha_critica">[% prestamo.fecha_vencimiento %]</span>&nbsp;
		            [% ELSE %]
		                &nbsp;<span class="fecha_cumple">[% prestamo.fecha_vencimiento %]</span>&nbsp;
		            [% END %]
			    </td>
			    <td>
		            [% IF prestamo.fecha_devolucion%]
				        &nbsp;[% prestamo.fecha_devolucion %]&nbsp;
		            [% ELSE %]
		                --------
		            [% END %]
			    </td>
		    
		    [% END %] <!-- FOREACH PRIMERO -->
		
		</table>
[% ELSE %]
    <div class="resultados_consulta">[% "No se han realizado pr&eacute;stamos." | i18n %] &nbsp;[% cant %]</div>
[% END %] 