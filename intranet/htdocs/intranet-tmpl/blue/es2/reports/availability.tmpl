[% INCLUDE "intranet-top.inc" %]

<link rel="stylesheet" type="text/css" href="[% themelang %]/includes/epoch_styles.css ">

<script src="/intranet-tmpl/blue/es2/includes/util.js"></script>

<script language="javascript">
[% INCLUDE "epoch_classes.js" %]

/*You can also place this code in a separate file and link to it like epoch_classes.js*/
        var dp_ini,dp_fin;      
	window.onload = function () {
		        dp_ini  = new Epoch('epoch_popup','popup',document.getElementById('fechaIni'));
			dp_fin  = new Epoch('epoch_popup','popup',document.getElementById('fechaFin'));
				};
var objAH;

function ordenar(orden){
	objAH.sort(orden);
}

function changePage(ini){
	objAH.changePage(ini);
}

function updateInfo(responseText){
	$("#result").html(responseText);
	zebra("tablaResult");
}

function consultar(){
	objAH=new AjaxHelper(updateInfo);
	objAH.url="/cgi-bin/koha/reports/availabilityResult.pl";
	objAH.branch=$("#branch").val();
	objAH.fechaIni=$("#fechaIni").val();
	objAH.fechaFin=$("#fechaFin").val();
	objAH.avail=$("#avail").val();
	objAH.funcion= "changePage";
	objAH.sendToServer();
}

</script>

<table width="100%"  border="0" cellpadding="0" cellspacing="0">
	<tr><td class="pagetitle" >[% "Disponibilidad de Ejemplares" | i18n %]</td></tr>
	<tr><td class="lineagruesa"  align="left" colspan="3"></td></tr>
</table>
<br>

<input TYPE="hidden" VALUE="[% orden %]" NAME="orden" >

<table border=0 cellspacing=0 cellpadding=2 width="80%" align="left">
	<tr>
	  	<td class=inputFontNormal>[% "Seleccione una unidad de informaci&oacute;n:" | i18n %]</td>
	  	<td  class=inputFontNormal> [% unidades %]</td>
	  	<td  class=inputFontNormal>[% Cavails %]</td>
	</tr>

	<tr>
	  	<td  class=inputFontNormal>[% "Seleccione una fecha de inicio:" | i18n %]</td>
	  	<td  class=inputFontNormal>
                    <input id="fechaIni" class="inputFontNormal"> 
                        <a href="javascript:dp_ini.toggle();">
                            <img src="[% themelang %]/images/cal.gif" width="16" height="16" border="0" alt='[% "Selecciona una fecha" | i18n %]'>
                        </a>
	  	</td>
	 	<td></td>
	<tr>

	<tr>
	  	<td  class=inputFontNormal>[% "Seleccione una fecha de Fin:" | i18n %] </td>	
	  	<td  class=inputFontNormal>
			<input id="fechaFin" class="inputFontNormal"> 
			<a href="javascript:dp_fin.toggle();">
			<img src="[% themelang %]/images/cal.gif" width="16" height="16" border="0" alt="[% 'Selecciona una fecha' | i18n %]">
			</a>
		</td>
          	<td colspan=2 align="center">
		<input type="image" name="consulta" src="[% themelang %]/images/generarListado.png" onClick="consultar();">
	  	</td>
        </tr>
</table>

<br><br>
<center>
	<div id="result"></div>
</center>

