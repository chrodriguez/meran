
[% USE HTML %]

<!-- Search Results Table -->
[% IF numrecords %]

<table width="100%" align="center" class="top" cellpadding=0 cellspacing=0 border=0 >
<tr>
  <td  class="fontresultado" align="center">
  [% numrecords %] resultados encontrados
  </td></tr>

<center>[% paginador %]</center>

<table class="zebra" width="100%"  align="center" cellpadding="4" cellspacing="0" border="1">
  	
	<tr  class="bordetabla" bordercolor="#f2f2f2">

[% IF loggedinusername %]
	  <th>
		<a id="todos" class="click">
		<img src="[% themelang %]/images/check.png" title="Invertir la selecci&oacute;n" border=0>
		</a>
	   </th>
[% END %]

	  <th align="center">T&iacute;tulo&nbsp;<img src="[% themelang %]/images/ico_helpbordo.png" 
		title="Haga clic sobre el t&iacute;tulo para ver m&aacute;s datos" border=0>
	  </th>
	  <th align="center">Autor&nbsp;<img src="[% themelang %]/images/ico_helpbordo.png" 
		title="Haga clic sobre el autor para ver todos sus libros" border=0>
	  </th>
	  <th>Edici&oacute;n</th>
	  <th>Disponibilidad</th>

	</tr>


	<!-- Actual Search Results -->
[% FOREACH SEARCH_RESULTS %]
	<tr  bordercolor="#f2f2f2">

	[% IF loggedinusername %]
          <td valign="middle" align="center">
		<input type=checkbox id="[% id1 %]" name=checkbox value="[% id1 %]">
	  </td>
	[% END %]
	  <td>	
		  [% IF titulo %]

			<a class="click" onClick="detalle([% id1 %])" title="Mostrar Detalle">[% HTML.escape(titulo) %]
			</a>
		  [% ELSE %]
			&nbsp;
		[% END %]
	  </td>

	  <td>
		[% IF nomCompleto %]
			<a class="click" onClick="buscarPorAutor([% idAutor %])" title="Filtrar por Autor">[% nomCompleto %]
			</a>
		[% ELSE %]
			&nbsp;
		[% END %]
	  </td>

	  <td>
		[% IF grupos %]
			[% FOREACH grupos %]
				[% IF edicion %]
					[% edicion %] 
						&nbsp;
				[% END %]
				[% IF anio_publicacion %]
					([% anio_publicacion %])
				[% END %]
				[% IF volume %]
				        t [% volume %]
				[% END %]<br>
			[% END %]
		[% ELSE %]
			&nbsp;
		[% END %]	
	  </td>

	  <td>
		[% IF disponibilidad %]
			[% FOREACH disponibilidad %]
				<b>[% tipoPrestamo %]</b> [% cantTotal %]
				<br>
				<div style="margin-right:4px">
				[% reservados %]
				<br> 
				[% prestados %]
				<br>
				</div>
         		[% END %]
		[% ELSE %]
			&nbsp;
		[% END %]
	</td>	
	</tr>

[% END %]


