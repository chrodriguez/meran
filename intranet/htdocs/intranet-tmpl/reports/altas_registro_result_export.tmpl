[% USE HTML %]
[% IF HEADERS %]
    [% INCLUDE "intranet-top.inc" %]
    <!-- PARA PODER CREAR EL FORMULARIO -->
    <div id="formulario"></div>

[% END %]

<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click" title='[% "click para acceder a los resultados de la b&uacute;squeda" | i18n %]'>
        [% "Resultados de la b&uacute;squeda (altas de registro)" | i18n %]: [% cantidad %]</legend>
        <div class="contenedor_paginador">[% paginador %]</div>
                    <div class="resultados_consulta">[% "T&eacute;rmino de b&uacute;squeda" | i18n %]: 
            
                <h2><i>[% buscoPor %]</i></h2>
            
            </div>
        
            <table id="tablaResult" class="datos_tabla" border=0 cellspacing=0 cellpadding=0 width=100%>
                <tr class="titulo_tabla_resultado" style="background: #071910">
                    <td width="35%" class="click" onClick="ordenar('titulo')" Title='[% "Ordenar por T&iacute;tulo" | i18n %]'>
                        [% "T&iacute;tulo" | i18n %]
                    </td>
                    <td> </td>
                    <td width="35%" class="click" onClick="ordenar('nomCompleto')" Title='[% "Ordenar por Autor" | i18n %]'>
                        [% "Autor" | i18n %]
                    </td>
                    <td width="12%">[% "Edici&oacute;n/A&ntilde;o" | i18n %]</td>
                    <td width="15%"> [% "Disponibilidad" | i18n %] </td>
                </tr>
            <!-- Actual Resultados de la b&uacute;squeda -->
            [% FOREACH data %]
                <tr class="catalogue-last-added">
                    <td class="titulo_result">
            
                        [% PERL %]
                            print C4::AR::Filtros::link_to( text =>     "[% HTML.escape(titulo) %]",
                                                            url =>      "/cgi-bin/koha/catalogacion/estructura/detalle.pl", 
                                                            params =>   ["id1=[% id1 %]"],
                                                            title =>    "[% 'Mostrar Detalle del Ejemplar' | i18n %]"
                                                        ) ;
                        [% END %]
            
                    </td>
            
                    <td class="autor_result">
                        <a class="click" onClick="buscarPorAutor('[% nomCompleto %]')" title="[% 'Filtrar por Autor' | i18n %]">
                            [% nomCompleto %]
                        </a>
                    </td>
            
                    <td>
                        <br />
                        [% FOREACH grupos %]
                            [% IF edicion %]
                                [% edicion %] &nbsp;
                            [% END %]
                            [% IF anio_publicacion %]
                                ([% anio_publicacion %])
                            [% END %]
                            [% IF volume %]
                                t [% volume %]
                            [% END %]<br>
                        [% END %]
                    </td>
            
                    <td>
                        [% FOREACH disponibilidad %]
                            <b>[% tipoPrestamo %]</b> [% cantTotal %]<br>
                                    [% reservados %]
                                    [% prestados %]
                        [% END %]
                    </td>   
                </tr>
                <hr />
            [% END %]
            </table>
        </div>
</fieldset>
<form id="exportPDF" action="/cgi-bin/koha/reports/altas_registro_result.pl?token=[% token %]"  accept-charset="utf-8">
        <input type="hidden" name="export" value="pdf" />
        <input type="hidden" name="item_type" value="[% item_type %]" />
        <input type="hidden" name="date_begin" value="[% date_begin %]" />
        <input type="hidden" name="date_end" value="[% date_end %]" />
</form>