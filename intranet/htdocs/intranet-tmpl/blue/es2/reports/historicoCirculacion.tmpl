	function guardarNota(id){

		var params= 	'id=' + id +
				'&notas=' + $('#'+id).val();
	
		$.ajax({	type: "POST", 
				url: "/cgi-bin/koha/reports/historicoCirculacionResult.pl",
				data: params,
				beforeSend: Init,
				complete: function(ajax){
 						updateInfo(ajax.responseText);
					}
		});

