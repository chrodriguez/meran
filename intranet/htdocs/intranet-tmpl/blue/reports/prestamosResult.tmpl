<table id="tablaResult" class="tablaResult" border=0 cellspacing=0 cellpadding=0 width="100%" align="center">
 	<tr class="tablaresultadoTitle">
		<td width="1%" align="left" valign="top"><img src="[% themelang %]/images/izquierda.png"></td>
		
		<th>
			<a class="click" name="checkAllPrestamos"><img src="[% themelang %]/images/check.png" border="0" title="Invertir la selecci&oacute;n"></a>
		</th>

		<th class="tablaresultadoTitleClick" onClick="ordenar('surname')">
			[% "Apellido" | i18n %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('firstname')">
			[% "Nombre" | i18n %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('cardnumber')">
			[% "Tarjeta de Id." | i18n %]
		</th>

		<th class="tablaresultadoTitleClick" onClick="ordenar('emailaddress')">
			[% "E-mail" %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('date_due')">
			[% "Fecha de prestamo" | i18n %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('vencimiento')">
			[% "Fecha de vencimiento" | i18n %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('barcode')">
			[% "C&oacute;digo de barra" | i18n %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('signatura_topografica')">
			[% "Signatura Topogr&aacute;fica" | i18n %]
		</th>
		<th class="tablaresultadoTitleClick" onClick="ordenar('description')">
			[% "Tipo de pr&eacute;stamo" | i18n %]
		</th>
	
		<td width="1%" align="rigth" valign="top"><img src="[% themelang %]/images/derecha.png"></td>
	</tr>

[% FOREACH RESULTSLOOP %]
	<tr align='center'>
		<td>&nbsp;</td>

		<td class="inputFontNormal"> 
		[% IF vencido %]
                    <input type="checkbox" name="chkboxPrestamos" value="[% socio.getNro_socio %]" id="[% socio.getNro_socio %]">
                [% END %]
		</td>

		<td class="inputFontNormal"> 
			<a class="inputFontNormal" href="/cgi-bin/koha/usuarios/reales/datosUsuario.pl?bornum=[% socio.getNro_socio %]">[% surname %]</a>
		</td>
		<td class="inputFontNormal"> 
			[% socio.getNombre %] 
		</td>
		<td class="inputFontNormal"> 
			[% socio.Nro_documento %]
		</td>
		<td class="inputFontNormal"> 
			[% IF ok %]
                            [% socio.getEmail %]
        		[% ELSE %]
                            <a class="inputFontNormal" href="mailto:[% emailaddress %]">
                                [% socio.getEmail %]
                            </a>
        		[% END %]
		</td>
		<td class="inputFontNormal"> 
			[% date_due %]
		</td>
		<td class="inputFontNormal"> 
			[% vencimiento %]
		</td>
		<td class="inputFontNormal"> 
			<a href='/cgi-bin/koha/busquedas/detalleItem.pl?id1=[% id1 %]&id2=[% id2 %]&id3=[% id3 %]&barcode=[% barcode %]&signatura_topografica=[% signatura_topografica %]' title='Detalle de disponibilidad'>[% barcode %]</a>
		</td>
		<td class="inputFontNormal"> 
			<a class="inputFontNormal" href="/cgi-bin/koha/detalle.pl?id1=[% id1 %]">[% signatura_topografica %]</a>
		</td>
		<td class="inputFontNormal"> 
			[% description %]
		</td>
		<td>&nbsp;</td>
	</tr>
[% END %]
</table>

