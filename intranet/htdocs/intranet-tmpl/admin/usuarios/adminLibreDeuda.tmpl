<script>

function checkedAll(check0){
	var nombre="chk";
	for(i=1;i<6;i++){
		check=document.getElementById(nombre+i);
		if(check0.checked){check.checked=true}
                else{check.checked=false}
	}
}
function desmarcar(chk){
	if(!chk.checked){
		document.getElementById("chk0").checked=false;
	}
}

</script>
