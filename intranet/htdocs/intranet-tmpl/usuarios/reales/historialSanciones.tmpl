[% USE HTML %]

[% IF cant %]
		<div class="resultados_consulta">[% "Cantidad de registros en el hisotrial de sanciones" | i18n %]: &nbsp;[% cant %]</div> 
		<div class="contenedor_paginador">[% paginador %]</div>
		<table class="tablaHistorialSanciones datos_tabla" cellspacing=0  cellpadding=0 border=0 width="100%">
		    <tr class="titulo_tabla_resultado">
		        <td>
                    [% "Operaci&oacute;n" | i18n %]
                </td>
                <td class="click" onclick="ordenarHistorialSanciones('usr_responsable.nro_socio')" 
                        Title='[% "Ordenar por Responsable" | i18n %]'>
                    [% "Responsable" | i18n %]
                </td>
		            <td class="click" onclick="ordenarHistorialSanciones('fecha_comienzo')" 
		                Title='[% "Ordenar por Fecha Inicial" | i18n %]'>
				    [% "Fecha Inicial" | i18n %]
		        </td>
			    <td class="click" onclick="ordenarHistorialSanciones('fecha_final')" 
		                Title='[% "Ordenar por Fecha Final" | i18n %]'>
				    [% "Fecha Final" | i18n %]
			    </td>
		        <td class="click" onclick="ordenarHistorialSanciones('tipo_sancion')" 
                    Title='[% "Ordenar por Tipo de Sanci&oacute;n" | i18n %]'>
                    [% "Tipo de Sanci&oacute;n" | i18n %]
                </td>
                <td>
                        [% "Dias Sancion" | i18n %]
                </td>
                <td>
                        [% "Autor" | i18n %]
                </td>
                <td>
                        [% "Titulo" | i18n %]
                </td>
                <td>
                        [% "Edicion/A&ntildeo" | i18n %]
                </td>
		    </tr>
		    
            [% FOREACH historial_sancion IN HISTORIAL_SANCIONES %]
            <tr valign="middle" align="center">
                    [% IF historial_sancion.getTipo_operacion == "Borrado"  %]
                        <td style="color:red;">
                        Borrado, el [% historial_sancion.getTimestamp %]
                    [% ELSE %]
		                <td>
		                --
		            [% END %]
                </td>
                <td>
                    [% IF historial_sancion.responsable == "Sistema" %]
                        Sistema 
                    [% ELSE %]
                        [% historial_sancion.usr_responsable.persona.getApeYNom %]
                    [% END %]
                </td>
                <td>
                    [% historial_sancion.getFecha_comienzo_formateada %]
                </td>
                <td>
                    [% historial_sancion.getFecha_final_formateada %]
                </td>
                <td>
                  
                    [% IF historial_sancion.getTipo_sancion %]
                            [% historial_sancion.ref_tipo_sancion.ref_tipo_prestamo.getDescripcion %]
                    [% ELSE %]
                            Reserva no retirada
                    [% END %]
                </td>
                </td>
  
                <td>
                   [% historial_sancion.dias_sancion %]
                </td>
                <td>
                   <a class="click" onClick="buscarPorAutor('[%  historial_sancion.nivel3.nivel1.getAutor %]')" title="[% 'Filtrar por Autor' | i18n %]">
                    [%  historial_sancion.nivel3.nivel1.getAutor %]
                    </a>
                </td>
                <td>
                   [% PERL %]
						    print C4::AR::Filtros::link_to(	text => 	"[% HTML.escape(historial_sancion.nivel3.nivel1.getTitulo) %]",
		                                                    url => 		"[% url_prefix %]/catalogacion/estructura/detalle.pl",
														    params =>	[	"id1=[% HTML.escape(historial_sancion.nivel3.nivel1.getId1) %]"], 
													    ) ;
				    [% END %]
                </td>
                <td>
                   [% historial_sancion.nivel3.nivel2.getEdicion %] [%historial_sancion.nivel3.nivel2.getAnio_publicacion %]
                </td>
           
            [% END %] 

		
		</table>
[% ELSE %]
    <div class="resultados_consulta">[% "No existen registros en el hisotrial de sanciones" | i18n %]</div>
[% END %] 
