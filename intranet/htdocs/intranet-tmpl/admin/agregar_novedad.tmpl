[% INCLUDE 'intranet-top.inc' %]
<link rel="stylesheet" type="text/css" media="screen,projection,print" href="/includes/css/wysiwyg.css" />
<script src="/includes/jquery/jquery.wysiwyg.js"></script>
<script>
    $(document).ready(function() {
        $(function()
        {
            $('#contenido').wysiwyg();
        });
    });
</script>

[% USE HTML %]

<fieldset class="resultados_busqueda">
    <legend class="titulo_legend trigger click">[% "Agregar novedad de OPAC" | i18n %]:</legend>
        <div class="form">
            [% IF editing %]
                <form id="form_novedad" action="/cgi-bin/koha/admin/editar_novedad.pl" method="POST">
                    <input type="hidden" id="action" name="action" value="editar">
                    <input type="hidden" id="novedad_id" name="novedad_id" value="[% novedad.id %]">
            [% ELSE %]
                <form id="form_novedad" action="/cgi-bin/koha/admin/agregar_novedad.pl" method="POST">
                    <input type="hidden" id="action" name="action" value="agregar">
            [% END %]
                        <label for="titulo">[% "Titulo" | i18n %]</label>
                          <input type="text" id="titulo" name="titulo" value="[% novedad.getTitulo %]">
                          <br />

                        <label for="categoria">[% "Categor&iacute;a" | i18n %]</label>
                          <input type="text" id="categoria" name="categoria" value="[% novedad.getCategoria %]">
                          <br />

                        <label for="contenido">[% "Contenido" | i18n %]</label>
                          <textarea id="contenido" name="contenido" style="width: 88.3%">[% HTML.escape(novedad.getContenido) %]</textarea>
                          <br />

                        <input type="hidden" id="token" name="token" value="[% token %]">
                        [% IF editing %]
                            <input type="submit" value="[% 'Modificar' | i18n %]">
                        [% ELSE %]
                            <input type="submit" value="[% 'Agregar' | i18n %]">
                        [% END %]
            </form>
        </div>
</fieldset>
[% PERL %]
        print C4::AR::Filtros::link_to( text    =>  "[% 'Volver al listado' | i18n %]",
                                        url     =>  "/cgi-bin/koha/admin/novedades_opac.pl",
                                        title   =>  "[% 'Volver al listado' | i18n %]"
                ) ;
[% END %]

[% INCLUDE 'intranet-bottom.inc' %]
