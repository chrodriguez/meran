[% INCLUDE "intranet-top.inc" %]


<script language="JavaScript">
	function borrar(sanctiontypecode, sanctionrulecode){
		document.frm.sanctiontypecode.value= sanctiontypecode;
		document.frm.sanctionrulecode.value= sanctionrulecode;
		document.frm.accion.value= 'delete';
		document.frm.submit();
	}

	function agregar(sanctiontypecode){
		document.frm.sanctiontypecode.value= sanctiontypecode;
		document.frm.accion.value= 'add';
		document.frm.submit();
	}

	function actualizar(){
		document.frm.accion.value= 'issuestypes';
		document.frm.submit();
	}
</script>
<div class="titulos">[% 'Tipos de sanciones' | i18n %]</div>
	
<form name="frm" method="POST">
		<input type="hidden" name="accion">
		<input type="hidden" name="sanctiontypecode">
		<input type="hidden" name="sanctionrulecode">

<table border=0 cellspacing=0 cellpadding=0 width="80%">
	<tr class="tablaresultadoTitle">

                <td>[% "Tipos de pr&eacute;stamo" | i18n %]</td>
                <td>[% "Categorias de usuario" | i18n %]</td>

	</tr>
        <tr valign=middle>
		<td height=25 class="[% clase %]">&nbsp;</td>
		<td>[% issues_types %]</td>
		<td>[% categories %]</td>
                <td height=25 class="[% clase %]">&nbsp;</td>
	</tr>
	<tr valign=bottom>
	        <td class="lineafinaltabla"  align="left" colspan="4"></td>
        </tr>
</table>

	<br><br>
<table border=0 cellspacing=0 cellpadding=0 width="80%">
	<tr class="tablaresultadoTitle">

                <td>&nbsp;</td>
                <td>[% "Tipos de pr&eacute;stamo sobre el que se aplica" | i18n %]</td>

        </tr>
	[% FOREACH issues %]
		<tr valign="middle">
			
			<td><input type="checkbox" name="issuestypes" value="[% issuecode %]" [% IF checked %] "checked="checked [% END %] > </td>
			<td>[% description %]</td>
			
		</tr>
	[% END %]
	<tr valign=bottom>
	        <td class="lineafinaltabla"  align="left" colspan="4"></td>
       	</tr>

	<td colspan="2"><FONT SIZE=2  face="arial, helvetica"><a href="#" onClick="actualizar();">[% "Guardar" | i18n %]</a></FONT></td>
</table>
	<br><br>

<table border=0 cellspacing=0 cellpadding=0 width="100%">
	<tr class="tablaresultadoTitle">

		<td>[% "Orden" | i18n %]</td>
                <td>[% "Tipo de usuario" | i18n %]</td>
                <td>[% "Tipo de pr&eacute;stamo" | i18n %]</td>
		<td>[% "D&iacute;as de demora" | i18n %]</td>
                <td>[% "D&iacute;as de sanci&oacute;n" | i18n %]</td>
                <td>[% "Cantidad" | i18n %]</td>
                <td> [% "Eliminar" | i18n %]</td>

        </tr>
        [% FOREACH loop_sanctions_types %]
		<tr valign=middle>

			<td>[% orden %]</td>
			<td>[% desccategory %]</td>
			<td>[% descissuetype %]</td>
			<td>[% delaydays %]</td>
			<td>[% sanctiondays %]</td>
			<td>[% amount %]</td>
			<td><FONT SIZE=2 face="arial, helvetica"><a href="#" onClick="borrar('[% sanctiontypecode %]','[% sanctionrulecode %]');">[% "Eliminar" | i18n %]</a></FONT>
			</td>

		</tr>
	[% END %]
	<tr valign=bottom>
	        <td class="lineafinaltabla"  align="left" colspan="9"></td>
        </tr>

        <tr>
        	<td colspan="7"><FONT SIZE=2  face="arial, helvetica"><a href="#" onClick="agregar('[% sanctiontypecode %]');">[% "Agregar" | i18n %]</a>&nbsp;[% "Orden: " | i18n %][% orders %]&nbsp;[% "Cantidad: " | i18n %][% amounts  %]&nbsp;[% "Regla: " | i18n %][% sanctions_rules %]</FONT>
		</td>
        </tr>
</table>

<p>[% "Para editar las reglas haga clic " | i18n %]<A HREF="/cgi-bin/koha/admin/sanctionrules.pl">[% "aqu&iacute;" | i18n %]</a></p>

	</form>

[% INCLUDE "intranet-bottom.inc" %]
