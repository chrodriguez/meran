[% INCLUDE "intranet-top.inc" %]

<script>

function checkedAll(check0){
	var nombre="chk";
	for(i=1;i<6;i++){
		check=document.getElementById(nombre+i);
		if(check0.checked){check.checked=true}
                else{check.checked=false}
	}
}
function desmarcar(chk){
	if(!chk.checked){
		document.getElementById("chk0").checked=false;
	}
}

</script>

<fieldset >
      <legend class="titulo_legend">[% "Administraci&oacute;n de Libre Deuda" | i18n %]</legend>
      <p class="inputFontNormal">
          [% "Elija porqu&eacute; causa no se puede realizar la impresi&oacute;n del certificado de libre deuda" | i18n %]
      </p>
      <br>
    <fieldset >
          <legend class="titulo_legend">[% "Por tener:" | i18n %]</legend>
          <form name="adminLiDe" method="post" action="/cgi-bin/koha/admin/usuarios/adminLibreDeuda.pl">
              <input type=hidden name=newflags value=1>
              <ul>
                  <li><input type="checkbox" name="chk1" id="chk1" value="1" onclick="desmarcar(this)"> [% "reservas adjudicadas" | i18n %]<br></li>
                  <li><input type="checkbox" name="chk2" id="chk2" value="1" onclick="desmarcar(this)"> [% "reservas en espera" | i18n %]<br></li>
                  <li><input type="checkbox" name="chk3" id="chk3" value="1" onclick="desmarcar(this)"> [% "prestamos vencidos" | i18n %] <br></li>
                  <li><input type="checkbox" name="chk4" id="chk4" value="1" onclick="desmarcar(this)"> [% "prestamos en curso" | i18n %]<br></li>
                  <li><input type="checkbox" name="chk5" id="chk5" value="1" onclick="desmarcar(this)"> [% "sanciones" | i18n %] <br></li>
                  <li><input type="checkbox" name="chk0" id="chk0" value="1" onclick="checkedAll(this)"> [% "todas" | i18n %]<br></li>
              </ul>
          <br>
              <ul>
                  <li>
                      [% PERL %]
                                          print C4::AR::Filtros::to_Button(   text    => "[% 'Guardar' | i18n %]",
                                                                              boton   => "boton_buscar",
                                                                              onClick => "adminLiDe.submit();",
                                                  ) ;
                      [% END %]
                  </li>
              </ul>
          </form>
    </fieldset>
</fieldset>
<script>
// PARA MARCAR LOS CHECKBOX QUE CORRESPONDE
var l="[% libreD %]";
if(l=="11111"){
	var chk=document.getElementById("chk0");
	chk.checked=true;
	checkedAll(chk);
}
else{
	for(i=0;i<5;i++){
		var j=i+1;
		if(l.charAt(i) == "1"){document.getElementById("chk"+j).checked=true;}
		else{document.getElementById("chk"+j).checked=false;}
	}
}

</script>

