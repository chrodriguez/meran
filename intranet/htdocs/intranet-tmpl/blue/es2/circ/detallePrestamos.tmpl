
[% USE HTML %]
<table class="tablaPrestamos" border="0" cellpadding="0" cellspacing="0" width="100%" align="center">
        <tr>
		<td colspan="10" align="center" class="inputFontNormal">
			<b>PR&Eacute;STAMOS</b>
        	</td>
     	</tr>
	<tr class="tablaresultadoTitle">
        	<td width="1%" align="left" valign="top">
		<img src="[% interface %]/[% themelang %]/images/izquierda.png">
		</td>

		<td>
			<a class="click" id="checkAllPrestamos">
			<img 	src="[% themelang %]/images/check.png" border="0" 
				title="Invertir la selecci&oacute;n">
			</a>
		</td>

                <td>T&iacute;tulo</td>
                <td>Autor</td>
                <td valign="middle">C&oacute;digo de Barras</td>
                <td>Pr&eacute;stamo</td>
                <td>Vencimiento</td>
                <td>Tipo</td>

        	<td width="1%" align="rigth" valign="top">
		<img src="[% interface %]/[% themelang %]/images/derecha.png">
		</td>
	</tr>
        [% FOREACH issues %]
	<tr class="inputFontNormal">
		<td width="1%">&nbsp;</td>
		<td>
			 <input type="checkbox" name="chkboxPrestamos" value="[% id3 %]" id="[% id3 %]">
		</td>
                <td>
			[% HTML.escape(titulo) %]
			[% IF unititle %]
				:&nbsp;[% unititle %]
			[% END %]
		</td>
            	<td>
			[% autor %]
		</td>
            	<td align="center">
            		<a class="inputFontNormal" href="/cgi-bin/koha/busquedas/detalle.pl?id1=[% id1 %]">
				[% barcode %]</a>
                </td>
          	<td align="center">
			[% date_due %]
		</td>
           	<td align="center">
                 	<font  color="[% color %]">
                	[% date_fin %]
               		</font>
               	</td>
          	<td  align="center">
			[% issuetype %]
		</td>
        	<td width="1%">&nbsp;</td>
	</tr>
        [% END %]
</table>

[% IF cantIssues %]
	<center>
		<input type="image" 
			src="[% interface %]/[% themelang %]/images/item-return.png" 
			title="Devolver" onClick="realizarAccion('DEVOLUCION','chkboxPrestamos',generaDivDevRen)">
	
		<input 	type="image" 
			src="[% interface %]/[% themelang %]/images/renew.png" 
			title="Renovar" onClick="realizarAccion('RENOVACION','chkboxPrestamos',generaDivDevRen)">
	</center>
[% END %]

