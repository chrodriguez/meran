[% INCLUDE "intranet-top.inc" %]

<script>
function ordenar(orden){
	objAH.sort=orden;
	objAH.sendToServer();
}

function consultar(){
	objAH=new AjaxHelper(updateInfo);
	objAH.url= "/cgi-bin/koha/reports/inventoryResult.pl";
	objAH.desde= $("#desde").val();
	objAH.hasta= $("#hasta").val();
	//se envia la consulta
	objAH.sendToServer();
}

function updateInfo(responseText){
	$("#result").html(responseText);
	zebra("tablaResult");
}

</script>

<table width="100%"  border="0" cellpadding="0" cellspacing="0">
	<tr>
		<td class="pagetitle" >[% "Inventario:" | i18n %]</td>
	</tr>
	<tr>
		<td class="lineagruesa"  align="left" colspan="3"></td>
	</tr>
</table>
<br>

<center>
