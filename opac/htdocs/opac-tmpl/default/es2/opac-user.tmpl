<input 	name="delpic" id="delpic" type="image" 
	onClick="document.foto.submit();" value="Eliminar"  src="[% themelang %]/images/boton-eliminar-foto.png" border="0"  >
</a>
</center>
                </form>
          </td></tr>
        [% ELSE %]
          <tr><td span=100% align="center" class="impar" >
                <form action="/cgi-bin/koha/upload.pl" method=post enctype="multipart/form-data">
                        <input type=hidden name=bornum value=[% bornum %]>

<a  onMouseOut="swap('up','[% themelang %]/images/upload.png')" onMouseOver="swap('up','[% themelang %]/images/uploadbis.png')">
<input name="up" id="up" type="image" value="Subir Foto"  src="[% themelang %]/images/upload.png" border="0">
</a>
                        <input type=file name="picture">
                </form>
           </td></tr>
         [% END %]
  [% END %]
	
