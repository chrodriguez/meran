[% INCLUDE 'intranet-top.inc' %]
<link rel="stylesheet" type="text/css" media="screen,projection,print" href="/includes/css/wysiwyg.css" />
<script src="/includes/jquery/jquery.wysiwyg.js"></script>
<script>
    function modificar(){
        $('#form_novedad').submit();
    }
        
    function agregar(){
        $('#form_novedad').submit();
    }
</script>

[% USE HTML %]

[% IF editing %]
    <form id="form_novedad" action="[% url_prefix %]/admin/editar_novedad.pl" method="POST" class="form-horizontal">
        <input type="hidden" id="action" name="action" value="editar">
        <input type="hidden" id="token" name="token" value="[% token %]">
        <input type="hidden" id="novedad_id" name="novedad_id" value="[% novedad.id %]">
[% ELSE %]
    <form id="form_novedad" action="[% url_prefix %]/admin/agregar_novedad.pl" method="POST" class="form-horizontal">
        <input type="hidden" id="action" name="action" value="agregar">
[% END %]
<fieldset>
    <legend>[% "Agregar novedad de OPAC" | i18n %]:</legend>
                <div class="control-group">
                    <label class="control-label" for="titulo">[% "Titulo" | i18n %]</label>
                    <div class="controls">
                        <input type="text" id="titulo" name="titulo" value="[% novedad.getTitulo %]">
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" for="categoria">[% "Categor&iacute;a" | i18n %]</label>
                    <div class="controls">
                        <input type="text" id="categoria" name="categoria" value="[% novedad.getCategoria %]">
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" for="contenido">[% "Contenido" | i18n %]</label>
                    <div class="controls">
                        <textarea id="contenido" name="contenido" style="width: 88.3%" >[%novedad.getContenido %]</textarea>
                    </div>
                </div>

                [% IF twitter_enabled %]
                
                    <div class="control-group">
                        <div class="controls">
                            <input type="checkbox" id="check_publicar" name="check_publicar" value="publicar">[% " Publicar en Twitter" | i18n %]
                        </div>
                    </div>

                [% END %]
                <input type="hidden" id="token" name="token" value="[% token %]">
                <div class="form-actions">
                [% IF editing %]
                
                    [% PERL %]
                          print C4::AR::Filtros::action_link_button( 
                                                          button    => "btn",
                                                          url       => "[% url_prefix %]/admin/novedades_opac.pl",
                                                          title     => "[% 'Volver al listado' | i18n %]",
                                                      ) ;

                    [% END %]
                
                    [% PERL %]
                          print C4::AR::Filtros::action_button( 
                                                            button      => "btn btn-primary",
                                                            action      => "modificar()", 
                                                            icon        => "",
                                                            title       => "[% 'Modificar' | i18n %]",
                                                      ) ;


                    [% END %]
                    
                [% ELSE %]
                
                    [% PERL %]
                          print C4::AR::Filtros::action_link_button( 
                                                          button    => "btn",
                                                          url       => "[% url_prefix %]/admin/novedades_opac.pl",
                                                          title     => "[% 'Volver al listado' | i18n %]",
                                                      ) ;

                    [% END %]
                
                     [% PERL %]
                          print C4::AR::Filtros::action_button( 
                                                            button      => "btn btn-primary",
                                                            action      => "agregar()", 
                                                            icon        => "",
                                                            title       => "[% 'Agregar' | i18n %]",
                                                      ) ;


                    [% END %]
                    
                [% END %]
                </div>
            </form>
</fieldset>

[% INCLUDE 'intranet-bottom.inc' %]
