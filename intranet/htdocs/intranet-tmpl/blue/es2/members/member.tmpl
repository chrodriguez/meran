<script language="javascript" type="text/javascript">

var objAH;
function ordenar(orden){
	objAH.sort(orden);
}

function changePage(ini){
	objAH.changePage(ini);
}

function consultar(){
	var busqueda = $('#member').val();
	if(busqueda != ""){
		objAH=new AjaxHelper(updateInfo);
		objAH.url= '/cgi-bin/koha/members/memberResult.pl';
		objAH.funcion= 'changePage';
		objAH.member= busqueda;
		objAH.sendToServer();
	}
	else{
		alert("Ingrese un dato");
 		$('#member').focus();
	}

}

function updateInfo(responseText){
	$('#result').html(responseText);
	zebra('tablaResult');
}

function Borrar(){
	$('#member').val('');
}


$(document).ready(function() {
	//onEnter con foco en input, ejecuta la busqueda
	onEnter("member",consultar);
	if('<!-- TMPL_VAR NAME=member -->' != ""){
		consultar();
	}
});

</script>

